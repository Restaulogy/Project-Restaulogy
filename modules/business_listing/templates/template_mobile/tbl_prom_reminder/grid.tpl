{include file='header.tpl'}<div class="wrapper"><h1>{$_lang.tbl_prom_reminder.listing_title}</h1>{if $error_msg}	<center>{$error_msg}</center>{/if}{if $result_found gt 0 && $tbl_prom_reminderlist}	<table class="biz_data_grid">		<tr>			<th class="{if $smarty.get.sort_on eq 'prem_promotion'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=prem_promotion&sort_by={$new_sort}">{$_lang.tbl_prom_reminder.label.prem_promotion}</a></th>			<th class="{if $smarty.get.sort_on eq 'prem_user'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=prem_user&sort_by={$new_sort}">{$_lang.tbl_prom_reminder.label.prem_user}</a></th>			<th class="{if $smarty.get.sort_on eq 'prem_before'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=prem_before&sort_by={$new_sort}">{$_lang.tbl_prom_reminder.label.prem_before}</a></th>			<th class="{if $smarty.get.sort_on eq 'prem_after'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=prem_after&sort_by={$new_sort}">{$_lang.tbl_prom_reminder.label.prem_after}</a></th>			<th class="{if $smarty.get.sort_on eq 'prem_spc_date'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=prem_spc_date&sort_by={$new_sort}">{$_lang.tbl_prom_reminder.label.prem_spc_date}</a></th>			<th class="{if $smarty.get.sort_on eq 'prem_act_send_dt'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=prem_act_send_dt&sort_by={$new_sort}">{$_lang.tbl_prom_reminder.label.prem_act_send_dt}</a></th>			<th class="{if $smarty.get.sort_on eq 'prem_is_send'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=prem_is_send&sort_by={$new_sort}">{$_lang.tbl_prom_reminder.label.prem_is_send}</a></th>			<th class="action_header">Action</th>		</tr>		{foreach from=$tbl_prom_reminderlist item=tbl_prom_reminderitem}		<tr class="{cycle values="odd,even"}">			<td><a href="{$page_url}?mode={$smarty.const.MODE_VIEW}&prem_id={$tbl_prom_reminderitem.prem_id}">{$tbl_prom_reminderitem.prem_promotion}</a></td>			<td>{$tbl_prom_reminderitem.prem_user}</td>			<td>{$tbl_prom_reminderitem.prem_before}</td>			<td>{$tbl_prom_reminderitem.prem_after}</td>			<td>{$tbl_prom_reminderitem.prem_spc_date}</td>			<td>{$tbl_prom_reminderitem.prem_act_send_dt}</td>			<td>{$tbl_prom_reminderitem.prem_is_send}</td>			<td><a href="{$page_url}?mode={$smarty.const.MODE_UPDATE}&prem_id={$tbl_prom_reminderitem.prem_id}" class="editIcon"></a><a class="deleteIcon" href="#" onclick="deletetbl_prom_reminder({$tbl_prom_reminderitem.prem_id});"></a>{if $tbl_prom_reminderitem.isActive eq 1}<a href="{$page_url}?action={$smarty.const.ACTION_DEACTIVATE}&prem_id={$tbl_prom_reminderitem.prem_id}" class="deactiveIcon" title="{$_lang.tbl_prom_reminder.DEACTIVATE.BTN_LBL}"></a>{else}<a href="{$page_url}?action={$smarty.const.ACTION_ACTIVATE}&prem_id={$tbl_prom_reminderitem.prem_id}" class="activeIcon" title="{$_lang.tbl_prom_reminder.ACTIVATE.BTN_LBL}"></a>{/if}</td>		</tr>	{/foreach}		<tfoot>			<tr>				<td colspan="10">					# {$result_found}&nbsp;&nbsp;&nbsp;{if $pagination neq ""}{$pagination}{/if}					<select onchange="changePage('{$navigationURL}',this.value,{$smarty.request.limit});">					{if $allPageCount gt 1}						{for $foo=1 to $allPageCount}							<option value="{$foo}" {if $foo eq $currentPage}selected="selected"{/if}>{$foo}</option>						{/for}					{else}						<option value="1" disabled="disabled">1</option>					{/if}					</select>				</td>			</tr>		</tfoot>	</table>{else}	<div class="error">{$_lang.tbl_prom_reminder.no_record_found}</div>{/if}<center><input data-icon="add-item" data-inline="true" onclick="window.location.href='{$page_url}?mode={$smarty.const.MODE_CREATE}'" type="button" value="{$_lang.tbl_prom_reminder.CREATE.BTN_LBL}"/></center></div>{include file="tbl_prom_reminder/js.tpl"}{include file="footer.tpl"}