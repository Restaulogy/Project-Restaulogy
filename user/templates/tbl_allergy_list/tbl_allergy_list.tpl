{include file='header.tpl'}<div class="wrapper"><h1>{$_lang.tbl_allergy_list.listing_title}</h1>{if $error_msg}	<center>{$error_msg}</center>{/if}{if $result_found gt 0 && $tbl_allergy_listlist}<form name="frm_tbl_allergy_list" id="frm_tbl_allergy_list" method="POST" action="{$page_url}">	<table class="listTable">		<tr><th class="bigListItem" colspan="2">{$_lang.tbl_allergy_list.title}</th>		<th style="width:5%;">                {$_lang.main.status}		</th>		<!-- <th class="actionListItem"></th> -->        </tr>		{foreach from=$tbl_allergy_listlist item=tbl_allergy_listitem}			<tr>                <td style="width:3%;" >					 <label for="sel_tbl_allergy_list[{$tbl_allergy_listitem.alergy_id}]" data-mini="true" style="width:23px;"><input type="checkbox" data-inline='true' data-mini='true' id="sel_tbl_allergy_list[{$tbl_allergy_listitem.alergy_id}]" name="sel_tbl_allergy_list[{$tbl_allergy_listitem.alergy_id}]" />&nbsp;</label>			    </td>                <td class="bigListItem"><a href="{$page_url}?mode={$smarty.const.MODE_UPDATE}&alergy_id={$tbl_allergy_listitem.alergy_id}">{$tbl_allergy_listitem.alergy_name}</a></td>                <td >                    {if $tbl_allergy_listitem.isActive eq 1}                            <a href="#" class="activeIcon" title="{$_lang.tbl_allergy_list.ACTIVATE.BTN_LBL}"></a>                    {else}                            <a href="#" class="deactiveIcon" title="{$_lang.tbl_allergy_list.DEACTIVATE.BTN_LBL}"></a>                    {/if}                </td>                <!--                <td class="actionListItem"><a href="{$page_url}?mode={$smarty.const.MODE_UPDATE}&alergy_id={$tbl_allergy_listitem.alergy_id}" class="editIcon"></a><a class="deleteIcon" href="#" onclick="deletetbl_allergy_list({$tbl_allergy_listitem.alergy_id});"></a>{if $tbl_allergy_listitem.isActive eq 1}<a href="{$page_url}?action={$smarty.const.ACTION_DEACTIVATE}&alergy_id={$tbl_allergy_listitem.alergy_id}" class="deactiveIcon" title="{$_lang.tbl_allergy_list.DEACTIVATE.BTN_LBL}"></a>{else}<a href="{$page_url}?action={$smarty.const.ACTION_ACTIVATE}&alergy_id={$tbl_allergy_listitem.alergy_id}" class="activeIcon" title="{$_lang.tbl_allergy_list.ACTIVATE.BTN_LBL}"></a>{/if}</td>                -->			</tr>	{/foreach}	</table>{else}	<div class="error">{$_lang.tbl_allergy_list.no_record_found}</div>{/if}{if $pagination}	<center>{$pagination}</center>{/if}<input type="hidden" id="action" name="action"/></form><div class="biz_center">{if $result_found gt 0 && $tbl_allergy_listlist} 	<input data-inline="true" data-icon="briefcase" type="button" value="{$_lang.main.toggle}" onclick="javascript:$('input[type=checkbox]').click();" />    <input data-inline="true" data-icon="inactive" type="button" value="{$_lang.tbl_dishes.DEACTIVATE.BTN_LBL}" onclick="actiontbl_allergy_list('{$smarty.const.ACTION_DEACTIVATE}');"  />    <input data-inline="true" data-icon="active" type="button" value="{$_lang.tbl_dishes.ACTIVATE.BTN_LBL}" onclick="actiontbl_allergy_list('{$smarty.const.ACTION_ACTIVATE}');" />    <input data-inline="true" data-icon="delete" type="button" value="{$_lang.tbl_dishes.DELETE.BTN_LBL}" onclick="actiontbl_allergy_list('{$smarty.const.ACTION_DELETE}');" />{/if}    <input data-icon="add-item" data-inline="true" onclick="window.location.href='{$page_url}?mode={$smarty.const.MODE_CREATE}'" type="button" value="{$_lang.tbl_allergy_list.CREATE.BTN_LBL}"/> </div>{include file="tbl_allergy_list/js.tpl"}{include file="footer.tpl"}