{include file='header.tpl'}<div class="wrapper"><h1>{$_lang.tbl_allergy_list.listing_title}</h1>{if $error_msg}	<center>{$error_msg}</center>{/if}{if $result_found gt 0 && $tbl_allergy_listlist}	<table class="biz_data_grid">		<tr>			<th class="{if $smarty.get.sort_on eq 'alergy_name'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=alergy_name&sort_by={$new_sort}">{$_lang.tbl_allergy_list.label.alergy_name}</a></th>			<th class="{if $smarty.get.sort_on eq 'alergy_desc'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=alergy_desc&sort_by={$new_sort}">{$_lang.tbl_allergy_list.label.alergy_desc}</a></th>			<th class="action_header">Action</th>		</tr>		{foreach from=$tbl_allergy_listlist item=tbl_allergy_listitem}		<tr class="{cycle values="odd,even"}">			<td><a href="{$page_url}?mode={$smarty.const.MODE_VIEW}&alergy_id={$tbl_allergy_listitem.alergy_id}">{$tbl_allergy_listitem.alergy_name}</a></td>			<td>{$tbl_allergy_listitem.alergy_desc}</td>			<td><a href="{$page_url}?mode={$smarty.const.MODE_UPDATE}&alergy_id={$tbl_allergy_listitem.alergy_id}" class="editIcon"></a><a class="deleteIcon" href="#" onclick="deletetbl_allergy_list({$tbl_allergy_listitem.alergy_id});"></a>{if $tbl_allergy_listitem.isActive eq 1}<a href="{$page_url}?action={$smarty.const.ACTION_DEACTIVATE}&alergy_id={$tbl_allergy_listitem.alergy_id}" class="deactiveIcon" title="{$_lang.tbl_allergy_list.DEACTIVATE.BTN_LBL}"></a>{else}<a href="{$page_url}?action={$smarty.const.ACTION_ACTIVATE}&alergy_id={$tbl_allergy_listitem.alergy_id}" class="activeIcon" title="{$_lang.tbl_allergy_list.ACTIVATE.BTN_LBL}"></a>{/if}</td>		</tr>	{/foreach}		<tfoot>			<tr>				<td colspan="5">					# {$result_found}&nbsp;&nbsp;&nbsp;{if $pagination neq ""}{$pagination}{/if}					<select onchange="changePage('{$navigationURL}',this.value,{$smarty.request.limit});">					{if $allPageCount gt 1}						{for $foo=1 to $allPageCount}							<option value="{$foo}" {if $foo eq $currentPage}selected="selected"{/if}>{$foo}</option>						{/for}					{else}						<option value="1" disabled="disabled">1</option>					{/if}					</select>				</td>			</tr>		</tfoot>	</table>{else}	<div class="error">{$_lang.tbl_allergy_list.no_record_found}</div>{/if}<center><input data-icon="add-item" data-inline="true" onclick="window.location.href='{$page_url}?mode={$smarty.const.MODE_CREATE}'" type="button" value="{$_lang.tbl_allergy_list.CREATE.BTN_LBL}"/></center></div>{include file="tbl_allergy_list/js.tpl"}{include file="footer.tpl"}