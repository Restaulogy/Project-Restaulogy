}*//*	if(IsNonEmpty(elemById("alergy_end_date").value)==false){		$("#alergy_end_date_err").html("{/literal}{$_lang.tbl_allergy_list.not_empty_msg.alergy_end_date}{literal}");		isErr = false;	}*/	if(isErr == false){		alert("{/literal}{$_lang.messages.revise_form}{literal}");	}	return isErr;}//..function</script>{/literal}