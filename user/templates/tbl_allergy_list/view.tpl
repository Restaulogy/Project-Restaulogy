{include file="header.tpl"}<div class="wrapper"><h1>{$_lang.tbl_allergy_list.title}</h1>{if $error_msg}	<center>{$error_msg}</center>{/if}<form name="frmupdatetbl_allergy_list" id="frmupdatetbl_allergy_list" onsubmit="return validatetbl_allergy_list();" method="POST" action="{$page_url}" style="{if $isUpdate eq 1}{else}display:none;{/if}">	<input type="hidden" name="alergy_id" id="alergy_id" value="{$tbl_allergy_listinfo.alergy_id}"/>	<div style="display:none;" class="error" id="alergy_id_err"></div>	<div class="field-row">		<label for="alergy_name">{$_lang.tbl_allergy_list.label.alergy_name}</label>		<input type="text" name="alergy_name" id="alergy_name" value="{$tbl_allergy_listinfo.alergy_name}"/>		<div class="error" id="alergy_name_err"></div>	</div>	<div class="field-row">		<label for="alergy_desc">{$_lang.tbl_allergy_list.label.alergy_desc}</label>		<input type="text" name="alergy_desc" id="alergy_desc" value="{$tbl_allergy_listinfo.alergy_desc}"/>		<div class="error" id="alergy_desc_err"></div>	</div>	<!--	<div class="field-row">		<label for="alergy_start_date">{$_lang.tbl_allergy_list.label.alergy_start_date}</label>		<input type="text" name="alergy_start_date" id="alergy_start_date" value="{$tbl_allergy_listinfo.alergy_start_date}"/>		<div class="error" id="alergy_start_date_err"></div>	</div>	-->	<!--	<div class="field-row">		<label for="alergy_end_date">{$_lang.tbl_allergy_list.label.alergy_end_date}</label>		<input type="text" name="alergy_end_date" id="alergy_end_date" value="{$tbl_allergy_listinfo.alergy_end_date}"/>		<div class="error" id="alergy_end_date_err"></div>	</div>	-->	<div class="biz_center">    <input type="hidden" id="action" name="action" value="{$smarty.const.ACTION_UPDATE}"/> <input  data-inline="true" data-icon="save"  type="submit" value="{$_lang.save_lbl}"/>    <input type="button" value="{$_lang.cancel_lbl}" data-inline="true" data-icon="delete" onclick="window.location.href='{$page_url}'"/