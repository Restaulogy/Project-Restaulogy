{include file='header.tpl'}<div class="wrapper"><h1>{$_lang.tbl_social_media.listing_title}</h1>{if $error_msg}	<center>{$error_msg}</center>{/if}{if $result_found gt 0 && $tbl_social_medialist}	<table class="biz_data_grid">		<tr>			<th class="{if $smarty.get.sort_on eq 'social_restarant'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=social_restarant&sort_by={$new_sort}">{$_lang.tbl_social_media.label.social_restarant}</a></th>			<th class="{if $smarty.get.sort_on eq 'social_facebook'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=social_facebook&sort_by={$new_sort}">{$_lang.tbl_social_media.label.social_facebook}</a></th>			<th class="{if $smarty.get.sort_on eq 'social_twitter'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=social_twitter&sort_by={$new_sort}">{$_lang.tbl_social_media.label.social_twitter}</a></th>			<th class="{if $smarty.get.sort_on eq 'social_instagram'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=social_instagram&sort_by={$new_sort}">{$_lang.tbl_social_media.label.social_instagram}</a></th>			<th class="{if $smarty.get.sort_on eq 'social_linkedin'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=social_linkedin&sort_by={$new_sort}">{$_lang.tbl_social_media.label.social_linkedin}</a></th>			<th class="action_header">Action</th>		</tr>		{foreach from=$tbl_social_medialist item=tbl_social_mediaitem}		<tr class="{cycle values="odd,even"}">			<td><a href="{$page_url}?mode={$smarty.const.MODE_VIEW}&social_id={$tbl_social_mediaitem.social_id}">{$tbl_social_mediaitem.social_restarant}</a></td>			<td>{$tbl_social_mediaitem.social_facebook}</td>			<td>{$tbl_social_mediaitem.social_twitter}</td>			<td>{$tbl_social_mediaitem.social_instagram}</td>			<td>{$tbl_social_mediaitem.social_linkedin}</td>			<td><a href="{$page_url}?mode={$smarty.const.MODE_UPDATE}&social_id={$tbl_social_mediaitem.social_id}" class="editIcon"></a><a class="deleteIcon" href="#" onclick="deletetbl_social_media({$tbl_social_mediaitem.social_id});"></a>{if $tbl_social_mediaitem.isActive eq 1}<a href="{$page_url}?action={$smarty.const.ACTION_DEACTIVATE}&social_id={$tbl_social_mediaitem.social_id}" class="deactiveIcon" title="{$_lang.tbl_social_media.DEACTIVATE.BTN_LBL}"></a>{else}<a href="{$page_url}?action={$smarty.const.ACTION_ACTIVATE}&social_id={$tbl_social_mediaitem.social_id}" class="activeIcon" title="{$_lang.tbl_social_media.ACTIVATE.BTN_LBL}"></a>{/if}</td>		</tr>	{/foreach}		<tfoot>			<tr>				<td colspan="8">					# {$result_found}&nbsp;&nbsp;&nbsp;{if $pagination neq ""}{$pagination}{/if}					<select onchange="changePage('{$navigationURL}',this.value,{$smarty.request.limit});">					{if $allPageCount gt 1}						{for $foo=1 to $allPageCount}							<option value="{$foo}" {if $foo eq $currentPage}selected="selected"{/if}>{$foo}</option>						{/for}					{else}						<option value="1" disabled="disabled">1</option>					{/if}					</select>				</td>			</tr>		</tfoot>	</table>{else}	<div class="error">{$_lang.tbl_social_media.no_record_found}</div>{/if}<center><input data-icon="add-item" data-inline="true" onclick="window.location.href='{$page_url}?mode={$smarty.const.MODE_CREATE}'" type="button" value="{$_lang.tbl_social_media.CREATE.BTN_LBL}"/></center></div>{include file="tbl_social_media/js.tpl"}{include file="footer.tpl"}