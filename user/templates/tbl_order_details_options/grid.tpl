{include file='header.tpl'}<div class="wrapper"><h1>{$_lang.tbl_order_details_options.listing_title}</h1>{if $error_msg}	<center>{$error_msg}</center>{/if}{if $result_found gt 0 && $tbl_order_details_optionslist}	<table class="biz_data_grid">		<tr>			<th class="{if $smarty.get.sort_on eq 'ord_det_opt_order_detail'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=ord_det_opt_order_detail&sort_by={$new_sort}">{$_lang.tbl_order_details_options.label.ord_det_opt_order_detail}</a></th>			<th class="{if $smarty.get.sort_on eq 'ord_det_opt_optionvalue'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=ord_det_opt_optionvalue&sort_by={$new_sort}">{$_lang.tbl_order_details_options.label.ord_det_opt_optionvalue}</a></th>			<th class="{if $smarty.get.sort_on eq 'ord_det_opt_qty'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=ord_det_opt_qty&sort_by={$new_sort}">{$_lang.tbl_order_details_options.label.ord_det_opt_qty}</a></th>			<th class="{if $smarty.get.sort_on eq 'ord_det_opt_price'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=ord_det_opt_price&sort_by={$new_sort}">{$_lang.tbl_order_details_options.label.ord_det_opt_price}</a></th>			<th class="action_header">Action</th>		</tr>		{foreach from=$tbl_order_details_optionslist item=tbl_order_details_optionsitem}		<tr class="{cycle values="odd,even"}">			<td><a href="{$page_url}?mode={$smarty.const.MODE_VIEW}&ord_det_opt_id={$tbl_order_details_optionsitem.ord_det_opt_id}">{$tbl_order_details_optionsitem.ord_det_opt_order_detail}</a></td>			<td>{$tbl_order_details_optionsitem.ord_det_opt_optionvalue}</td>			<td>{$tbl_order_details_optionsitem.ord_det_opt_qty}</td>			<td>{$tbl_order_details_optionsitem.ord_det_opt_price}</td>			<td><a href="{$page_url}?mode={$smarty.const.MODE_UPDATE}&ord_det_opt_id={$tbl_order_details_optionsitem.ord_det_opt_id}" class="editIcon"></a><a class="deleteIcon" href="#" onclick="deletetbl_order_details_options({$tbl_order_details_optionsitem.ord_det_opt_id});"></a>{if $tbl_order_details_optionsitem.isActive eq 1}<a href="{$page_url}?action={$smarty.const.ACTION_DEACTIVATE}&ord_det_opt_id={$tbl_order_details_optionsitem.ord_det_opt_id}" class="deactiveIcon" title="{$_lang.tbl_order_details_options.DEACTIVATE.BTN_LBL}"></a>{else}<a href="{$page_url}?action={$smarty.const.ACTION_ACTIVATE}&ord_det_opt_id={$tbl_order_details_optionsitem.ord_det_opt_id}" class="activeIcon" title="{$_lang.tbl_order_details_options.ACTIVATE.BTN_LBL}"></a>{/if}</td>		</tr>	{/foreach}		<tfoot>			<tr>				<td colspan="5">					# {$result_found}&nbsp;&nbsp;&nbsp;{if $pagination neq ""}{$pagination}{/if}					<select onchange="changePage('{$navigationURL}',this.value,{$smarty.request.limit});">					{if $allPageCount gt 1}						{for $foo=1 to $allPageCount}							<option value="{$foo}" {if $foo eq $currentPage}selected="selected"{/if}>{$foo}</option>						{/for}					{else}						<option value="1" disabled="disabled">1</option>					{/if}					</select>				</td>			</tr>		</tfoot>	</table>{else}	<div class="error">{$_lang.tbl_order_details_options.no_record_found}</div>{/if}<input onclick="window.location.href='{$page_url}?mode={$smarty.const.MODE_CREATE}'" type="button" value="{$_lang.tbl_order_details_options.CREATE.BTN_LBL}"/></div>{include file="tbl_order_details_options/js.tpl"}{include file="footer.tpl"}