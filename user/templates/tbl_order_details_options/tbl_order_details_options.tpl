{include file='header.tpl'}<div class="wrapper"><h1>{$_lang.tbl_order_details_options.listing_title}</h1>{if $error_msg}	<center>{$error_msg}</center>{/if}{if $result_found gt 0 && $tbl_order_details_optionslist}	<table class="listTable">		<tr><th class="bigListItem">{$_lang.tbl_order_details_options.title}</th>		<th class="actionListItem"></th></tr>		{foreach from=$tbl_order_details_optionslist item=tbl_order_details_optionsitem}			<tr>				<td class="bigListItem"><a href="{$page_url}?mode={$smarty.const.MODE_VIEW}&ord_det_opt_id={$tbl_order_details_optionsitem.ord_det_opt_id}">{$tbl_order_details_optionsitem.ord_det_opt_order_detail}</a></td>				<td class="actionListItem"><a href="{$page_url}?mode={$smarty.const.MODE_UPDATE}&ord_det_opt_id={$tbl_order_details_optionsitem.ord_det_opt_id}" class="editIcon"></a><a class="deleteIcon" href="#" onclick="deletetbl_order_details_options({$tbl_order_details_optionsitem.ord_det_opt_id});"></a>{if $tbl_order_details_optionsitem.isActive eq 1}<a href="{$page_url}?action={$smarty.const.ACTION_DEACTIVATE}&ord_det_opt_id={$tbl_order_details_optionsitem.ord_det_opt_id}" class="deactiveIcon" title="{$_lang.tbl_order_details_options.DEACTIVATE.BTN_LBL}"></a>{else}<a href="{$page_url}?action={$smarty.const.ACTION_ACTIVATE}&ord_det_opt_id={$tbl_order_details_optionsitem.ord_det_opt_id}" class="activeIcon" title="{$_lang.tbl_order_details_options.ACTIVATE.BTN_LBL}"></a>{/if}</td>			</tr>	{/foreach}	</table>{else}	<div class="error">{$_lang.tbl_order_details_options.no_record_found}</div>{/if}{if $pagination}	<center>{$pagination}</center>{/if}<input onclick="window.location.href='{$page_url}?mode={$smarty.const.MODE_CREATE}'" type="button" value="{$_lang.tbl_order_details_options.CREATE.BTN_LBL}"/></div>{include file="tbl_order_details_options/js.tpl"}{include file="footer.tpl"}