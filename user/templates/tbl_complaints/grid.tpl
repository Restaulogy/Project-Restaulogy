{include file='header.tpl'}<div class="wrapper"><h1>{$_lang.tbl_complaints.listing_title}</h1>{if $error_msg}	<center>{$error_msg}</center>{/if}{include file="tbl_feedback/tabs.tpl"}{if $result_found gt 0 && $tbl_complaintslist}<form name="frm_tbl_complaints" id="frm_tbl_complaints" method="POST" action="{$page_url}">	<table class="biz_data_grid">		<tr>			<th colspan="2" class="{if $smarty.get.sort_on eq 'complnt_title'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=complnt_title&sort_by={$new_sort}">{$_lang.tbl_complaints.label.complnt_title}</a></th>			<!--                <th class="{if $smarty.get.sort_on eq 'complnt_description'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=complnt_description&sort_by={$new_sort}">{$_lang.tbl_complaints.label.complnt_description}</a></th>            -->			<th class="{if $smarty.get.sort_on eq 'complnt_email'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=complnt_email&sort_by={$new_sort}">{$_lang.tbl_complaints.label.complnt_email}</a></th>			<th class="{if $smarty.get.sort_on eq 'complnt_phone'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=complnt_phone&sort_by={$new_sort}">{$_lang.tbl_complaints.label.complnt_phone}</a></th>			<!--                <th class="{if $smarty.get.sort_on eq 'complnt_restaurant'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=complnt_restaurant&sort_by={$new_sort}">{$_lang.tbl_complaints.label.complnt_restaurant}</a></th>            -->            <th class="{if $smarty.get.sort_on eq 'complnt_start_date'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=complnt_start_date&sort_by={$new_sort}">{$_lang.tbl_complaints.label.complnt_start_date}</a></th>			<th class="action_header">{$_lang.main.status}</th>        </tr>		{foreach from=$tbl_complaintslist item=tbl_complaintsitem}		<tr class="{cycle values="odd,even"}">            <td>                <label for="sel_tbl_complaints[{$tbl_complaintsitem.complnt_id}]" data-mini="true" style="width:23px;"><input type="checkbox" data-inline='true' data-mini='true' id="sel_tbl_complaints[{$tbl_complaintsitem.complnt_id}]" name="sel_tbl_complaints[{$tbl_complaintsitem.complnt_id}]" />&nbsp;</label>            </td>			<td>                <a href="{$page_url}?mode={$smarty.const.MODE_VIEW}&complnt_id={$tbl_complaintsitem.complnt_id}">{*$tbl_complaintsitem.complnt_title*}{$tbl_complaintsitem.complnt_description|truncate:30:"...":true}</a>  <br/>            </td>			<!-- <td>{$tbl_complaintsitem.complnt_description}</td> -->			<td>{$tbl_complaintsitem.complnt_email}</td>			<td>{$tbl_complaintsitem.complnt_phone}</td>			<td>            {* if $smarty.now|date_format:"%Y%m%d" == $tbl_complaintsitem.complnt_start_date|date_format:"%Y%m%d"}                {$tbl_complaintsitem.complnt_start_date|date_format:$smarty.const.HTML5_DATETIME_FORMAT}            {else}                {$tbl_complaintsitem.complnt_start_date|date_format:$smarty.const.HTML5_DAY_FORMAT}            {/if *}            {$tbl_complaintsitem.friendly_created_on}            </td>			<td>                {if $tbl_complaintsitem.isActive eq 1}                        <a href="#" class="activeIcon" title="{$_lang.tbl_complaints.ACTIVATE.BTN_LBL}"></a>                {else}                        <a href="#" class="deactiveIcon" title="{$_lang.tbl_complaints.DEACTIVATE.BTN_LBL}"></a>                {/if}            </td>			<!--            <td>{$tbl_complaintsitem.complnt_restaurant}</td>			<td>            <a href="{$page_url}?mode={$smarty.const.MODE_UPDATE}&complnt_id={$tbl_complaintsitem.complnt_id}" class="editIcon"></a><a class="deleteIcon" href="#" onclick="deletetbl_complaints({$tbl_complaintsitem.complnt_id});"></a>{if $tbl_complaintsitem.isActive eq 1}<a href="{$page_url}?action={$smarty.const.ACTION_DEACTIVATE}&complnt_id={$tbl_complaintsitem.complnt_id}" class="deactiveIcon" title="{$_lang.tbl_complaints.DEACTIVATE.BTN_LBL}"></a>{else}<a href="{$page_url}?action={$smarty.const.ACTION_ACTIVATE}&complnt_id={$tbl_complaintsitem.complnt_id}" class="activeIcon" title="{$_lang.tbl_complaints.ACTIVATE.BTN_LBL}"></a>{/if}</td>			-->            </tr>	{/foreach}		<tfoot>			<tr>				<td colspan="8">					# {$result_found}&nbsp;&nbsp;&nbsp;{if $pagination neq ""}{$pagination}{/if}					<select onchange="changePage('{$navigationURL}',this.value,{$smarty.request.limit});">					{if $allPageCount gt 1}						{for $foo=1 to $allPageCount}							<option value="{$foo}" {if $foo eq $currentPage}selected="selected"{/if}>{$foo}</option>						{/for}					{else}						<option value="1" disabled="disabled">1</option>					{/if}					</select>				</td>			</tr>		</tfoot>	</table>{else}	<div class="error">{$_lang.tbl_complaints.no_record_found}</div>{/if}<!--<center><input data-icon="add-item" data-inline="true" onclick="window.location.href='{$page_url}?mode={$smarty.const.MODE_CREATE}'" type="button" value="{$_lang.tbl_complaints.CREATE.BTN_LBL}"/></center>--><input type="hidden" id="action" name="{$smarty.const.ACTION_TITLE}"/></form><div class="biz_center">{if $result_found gt 0 && $tbl_complaintslist} 	<input data-inline="true" data-icon="briefcase" type="button" value="{$_lang.main.toggle}" onclick="javascript:$('input[type=checkbox]').click();" />    <input data-inline="true" data-icon="inactive" type="button" value="{$_lang.tbl_dishes.DEACTIVATE.BTN_LBL}" onclick="actiontbl_complaints('{$smarty.const.ACTION_DEACTIVATE}');"  />    <input data-inline="true" data-icon="active" type="button" value="{$_lang.tbl_dishes.ACTIVATE.BTN_LBL}" onclick="actiontbl_complaints('{$smarty.const.ACTION_ACTIVATE}');" />    <input data-inline="true" data-icon="delete" type="button" value="{$_lang.tbl_dishes.DELETE.BTN_LBL}" onclick="actiontbl_complaints('{$smarty.const.ACTION_DELETE}');" />{/if}</div></div>{include file="tbl_complaints/js.tpl"}{include file="footer.tpl"}