{include file='header.tpl'}<div class="wrapper"><h1>{$_lang.tbl_dish_options.listing_title}</h1>{if $error_msg}	<center>{$error_msg}</center>{/if}{if $result_found gt 0 && $tbl_dish_optionslist}	<table class="biz_data_grid">		<tr>			<th class="{if $smarty.get.sort_on eq 'dish_opt_dish_id'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=dish_opt_dish_id&sort_by={$new_sort}">{$_lang.tbl_dish_options.label.dish_opt_dish_id}</a></th>			<th class="{if $smarty.get.sort_on eq 'dish_opt_name'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=dish_opt_name&sort_by={$new_sort}">{$_lang.tbl_dish_options.label.dish_opt_name}</a></th>			<th class="{if $smarty.get.sort_on eq 'dish_opt_type'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=dish_opt_type&sort_by={$new_sort}">{$_lang.tbl_dish_options.label.dish_opt_type}</a></th>			<th class="action_header">Action</th>		</tr>		{foreach from=$tbl_dish_optionslist item=tbl_dish_optionsitem}		<tr class="{cycle values="odd,even"}">			<td><a href="{$page_url}?mode={$smarty.const.MODE_VIEW}&dish_opt_id={$tbl_dish_optionsitem.dish_opt_id}">{$tbl_dish_optionsitem.dish_opt_dish_id}</a></td>			<td>{$tbl_dish_optionsitem.dish_opt_name}</td>			<td>{$tbl_dish_optionsitem.dish_opt_type}</td>			<td><a href="{$page_url}?mode={$smarty.const.MODE_UPDATE}&dish_opt_id={$tbl_dish_optionsitem.dish_opt_id}" class="editIcon"></a><a class="deleteIcon" href="#" onclick="deletetbl_dish_options({$tbl_dish_optionsitem.dish_opt_id});"></a>{if $tbl_dish_optionsitem.isActive eq 1}<a href="{$page_url}?action={$smarty.const.ACTION_DEACTIVATE}&dish_opt_id={$tbl_dish_optionsitem.dish_opt_id}" class="deactiveIcon" title="{$_lang.tbl_dish_options.DEACTIVATE.BTN_LBL}"></a>{else}<a href="{$page_url}?action={$smarty.const.ACTION_ACTIVATE}&dish_opt_id={$tbl_dish_optionsitem.dish_opt_id}" class="activeIcon" title="{$_lang.tbl_dish_options.ACTIVATE.BTN_LBL}"></a>{/if}</td>		</tr>	{/foreach}		<tfoot>			<tr>				<td colspan="6">					# {$result_found}&nbsp;&nbsp;&nbsp;{if $pagination neq ""}{$pagination}{/if}					<select onchange="changePage('{$navigationURL}',this.value,{$smarty.request.limit});">					{if $allPageCount gt 1}						{for $foo=1 to $allPageCount}							<option value="{$foo}" {if $foo eq $currentPage}selected="selected"{/if}>{$foo}</option>						{/for}					{else}						<option value="1" disabled="disabled">1</option>					{/if}					</select>				</td>			</tr>		</tfoot>	</table>{else}	<div class="error">{$_lang.tbl_dish_options.no_record_found}</div>{/if}<input onclick="window.location.href='{$page_url}?mode={$smarty.const.MODE_CREATE}'" type="button" value="{$_lang.tbl_dish_options.CREATE.BTN_LBL}"/></div>{include file="tbl_dish_options/js.tpl"}{include file="footer.tpl"}