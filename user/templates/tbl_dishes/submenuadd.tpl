<div data-role="popup" id="popupAddSubMenu"  data-theme="a1" data-overlay-theme='g'  data-dismissible="false" style="width:270px;" class="ui-corner-all">    <div data-role="header" class="ui-corner-top">         <h1>Add menu-submenu</h1>     </div>    <div data-role="content" class="ui-corner-bottom ui-content" style="padding:5px;"><form name="frmcreatetbl_submenu_dishes" id="frmcreatetbl_submenu_dishes" onsubmit="return validatetbl_submenu_dishes();" method="POST" action="{$website}/user/tbl_submenu_dishes.php">	<input type="hidden" name="sbmnu_dish_id" id="sbmnu_dish_id" value="0"/>	<div style="display:none;" class="error" id="sbmnu_dish_id_err"></div>			<div class="field-row">				<label>Menu</label>				<select name="sbmnu_dish_menu" id="sbmnu_dish_menu" onclick="getSubMenus(this.value,'sbmnu_dish_submenu');">				<option value="">Select Menu</option>				{foreach $menulist as $menu}				<option value="{$menu@key}">{$menu}</option>				{/foreach}					</select>				<div class="error" id="sbmnu_dish_menu_err"></div>   </div>		<div class="field-row">		<label for="sbmnu_dish_submenu">{$_lang.tbl_submenu_dishes.label.sbmnu_dish_submenu}</label>		<select id="sbmnu_dish_submenu" name="sbmnu_dish_submenu">			<option value="">Select Submenu</option>		</select>		<div class="error" id="sbmnu_dish_submenu_err"></div>	</div>	<div class="field-row" style="display: none;">		<label for="sbmnu_dish_dish">{$_lang.tbl_submenu_dishes.label.sbmnu_dish_dish}</label>		 		{html_input name="sbmnu_dish_dish" value="{$tbl_dishesinfo.dish_id}"}				<div class="error" id="sbmnu_dish_dish_err"></div>	</div>  	<div class="field-row">	<table>		<tr>			<td>{$_lang.tbl_submenu_dishes.label.sbmnu_dish_price}</td>			<td>&nbsp;</td>			<td>{$_lang.tbl_submenu_dishes.label.sbmnu_dish_display_order}</td>		</tr>		<tr>			<td style="vertical-align:middle !important;"><input type="text" name="sbmnu_dish_price" id="sbmnu_dish_price" value="{$smarty.post.sbmnu_dish_price}" /></td>			<td>&nbsp;</td>			<td style="vertical-align:middle !important;">				<select name="sbmnu_dish_display_order" id="sbmnu_dish_display_order" data-mini="true" >		        	{for $foo=1 to 20}		                <option value="{$foo}" {if $smarty.post.sbmnu_dish_display_order eq $foo} selected="selected" {/if}> {$foo} </option>		            {/for}	        	</select>			</td>		</tr> 		<tr>			<td><div class="error" id="sbmnu_dish_price_err"></div></td>			<td>&nbsp;</td>			<td><div class="error" id="sbmnu_dish_display_order_err"></div></td>		</tr> 	</table> 	</div> 	<div class="field-row">		<label for="sbmnu_dish_desc">{$_lang.tbl_submenu_dishes.label.sbmnu_dish_desc}</label>		<textarea name="sbmnu_dish_desc" id="sbmnu_dish_desc">{$smarty.post.sbmnu_dish_desc}</textarea>		<div class="error" id="sbmnu_dish_desc_err"></div>	</div> 	 {html_input type="hidden" name="is_redirection" value="tbl_dishes"}	<div class="clearfix">&nbsp;</div>	<div class="field-row" align="center">	<input type="hidden" id="saveaction" name="action" value="{$smarty.const.ACTION_CREATE}"/>	<input data-icon="save" data-inline="true" type="submit" value="{$_lang.save_lbl}"/> 	<input data-icon="delete" data-inline="true" type="reset" value="{$_lang.cancel_lbl}" onclick="$('#popupAddSubMenu').popup('close');"/>	</div> </form>  </div></div>