{include file='header.tpl'}<div class="wrapper"><h1>{$_lang.tbl_dishes.listing_title}</h1>{**include file="dish_navbar.tpl"**}<a href="#" style="float:right;" data-role="button" data-icon="search" data-iconpos="notext" onclick="$('#filter_for_dishes').toggle();"></a>{if $filt_text neq ''}	<div style="width:99%;padding:5px;border-bottom:1px dotted #ccc;font-style: italic;"><span class="info">Search results &laquo; </span><span class="notice">{$filt_text}</span><span class="info">&raquo;</span></div><br>{/if}{if $error_msg}	<center>{$error_msg}</center>{/if}{include file='tbl_dishes/search.tpl'}<form name="frm_tbl_dishes" id="frm_tbl_dishes"  method="POST" action="{$page_url}" >{if $result_found gt 0 && $tbl_disheslist}	<table class="listTable">	<tr>    <!-- <th class="bigListItem">{$_lang.tbl_dishes.title}</th> -->    <th class="{if $smarty.get.sort_on eq 'dish_name'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=dish_name&sort_by={$new_sort}">{$_lang.tbl_dishes.label.dish_name}</a></th>    <th style="width:5%;">        {$_lang.main.status}	</th>	<th class="actionListItem">Dish Options</th>		<!-- <th class="actionListItem">{$_lang.tbl_food_pairing.title}</th> -->	</tr>		{foreach from=$tbl_disheslist item=tbl_dishesitem}			<tr>			  <td class="bigListItem" style="width:90% !important;">                <table >										                   <tr>				 	 <td style="width:2%;">						<label for="sel_dishes[{$tbl_dishesitem.dish_id}]" data-mini="true" style="width:23px;"><input type="checkbox" data-inline='true' data-mini='true' id="sel_dishes[{$tbl_dishesitem.dish_id}]" name="sel_dishes[{$tbl_dishesitem.dish_id}]" />&nbsp;</label>		     	    </td>                     <td width="40" height="40" style="border-bottom:none !important;">                         {if $tbl_dishesitem.attrib_details}                            {foreach $tbl_dishesitem.attrib_details as $attribs}                                {if $attribs.dish_attrib_img neq ''}                                    <img style="width:10px;height:10px;" src="{$website}{$smarty.const.DISH_ATTRIB_IMG_UPLOAD_PATH}{$attribs.dish_attrib_img}" />                                {/if}                            {/foreach}                            {/if}                         {if $tbl_dishesitem.dish_img neq ""}                            <a target="_blank" href="{$website}/uploads/dish/{$tbl_dishesitem.dish_img}"><img width="30" height="30" src="{$website}/uploads/dish/{$tbl_dishesitem.dish_img}" /></a>                         {else}                            {if $tbl_dishesinfo.dish_is_drink eq 0}                                <a target="_blank" href="{$website}/uploads/dish/{$tbl_dishesitem.dish_img}"><img width="30" height="30" src="{$website}/images/no_dish.png" /></a>                            {else}                                <a target="_blank" href="{$website}/uploads/dish/{$tbl_dishesitem.dish_img}"><img width="30" height="30" src="{$website}/images/no_drink.jpg" /></a>                            {/if}                         {/if}                     </td>                     <td style="border-bottom:none !important;">                        <table >                            <tr>                                <td style="border-bottom:none !important;">                                    <a href="{$page_url}?mode={$smarty.const.MODE_UPDATE}&dish_id={$tbl_dishesitem.dish_id}">{$tbl_dishesitem.dish_name}</a>                                </td>                            </tr>                            <tr>                                <td style="border-bottom:none !important;">              <small>							{if $tbl_dishesitem.submenu} 								{foreach $tbl_dishesitem.submenu as $sbmnu}									{$sbmnu.menu_name} &raquo; {$sbmnu.submnu_name}								{/foreach}							{/if}							<!--{$tbl_dishesitem.dish_notes|truncate :50}-->							</small>                                </td>                            </tr>                        </table>                     </td>                   </tr>                </table>                </td>                <td>                {if $tbl_dishesitem.isActive eq 1}					<a href="#" class="activeIcon" title="{$_lang.tbl_dishes.ACTIVATE.BTN_LBL}"></a>				{else}                     <a href="#" class="deactiveIcon" title="{$_lang.tbl_dishes.DEACTIVATE.BTN_LBL}"></a>				{/if}                </td>				<td class="actionListItem" style="vertical-align:top !important;width:10px !important;">			 					<a href="{$website}/user/tbl_dish_options.php?dish_opt_dish_id={$tbl_dishesitem.dish_id}" class="forwardIcon" title="Forward"></a> 				</td>               <!--               <td class="actionListItem" style="vertical-align:top !important;width:10px !important;">					<a href="{$website}/user/tbl_food_pairing.php?food_pair_main_dish={$tbl_dishesitem.dish_id}" class="forwardIcon" title="Forward"></a>				</td>				                <td class="actionListItem" style="vertical-align:top !important;">				<a href="{$page_url}?mode={$smarty.const.MODE_UPDATE}&dish_id={$tbl_dishesitem.dish_id}" class="editIcon"></a> 				<a href="{$website}/user/tbl_dishes.php?mode=list&dish_id={$tbl_dishesitem.dish_id}" class="statsIcon" title="List"></a> 				<a class="deleteIcon" href="#" onclick="deletetbl_dishes({$tbl_dishesitem.dish_id});"></a> 				<br/>				<a href="{$page_url}?mode={$smarty.const.MODE_VIEW}&dish_id={$tbl_dishesitem.dish_id}" class="detailIcon" title="Detail"></a> 				{if $tbl_dishesitem.isActive eq 1}					<a href="{$page_url}?action={$smarty.const.ACTION_DEACTIVATE}&dish_id={$tbl_dishesitem.dish_id}" class="deactiveIcon" title="{$_lang.tbl_dishes.DEACTIVATE.BTN_LBL}"></a>				{else}					<a href="{$page_url}?action={$smarty.const.ACTION_ACTIVATE}&dish_id={$tbl_dishesitem.dish_id}" class="activeIcon" title="{$_lang.tbl_dishes.ACTIVATE.BTN_LBL}"></a>				{/if} 				<a href="{$website}/user/tbl_dish_options.php?dish_opt_dish_id={$tbl_dishesitem.dish_id}" class="forwardIcon" title="Forward"></a> 				</td>                -->			</tr>	{/foreach}	</table>{else}	<div class="error">{$_lang.tbl_dishes.no_record_found}</div>{/if}{if $pagination}	<center>{$pagination}</center>{/if}  <input type="hidden" id="action" name="action" value=""/></form><div class="biz_center">{if $result_found gt 0 && $tbl_disheslist}<input data-inline="true" data-icon="briefcase" type="button" id="sel_all_dishes" name="sel_all_dishes" value="{$_lang.main.toggle}" onclick="javascript:$('input[type=checkbox]').click();" /><!--<input data-inline="true" data-icon="recycle-full" type="button"  value="{$_lang.tbl_dishes.DELETE.BTN_LBL}" onclick="actiontbl_dishes('{$smarty.const.ACTION_DELETE}');" />--><input data-inline="true" data-icon="inactive" type="button" value="{$_lang.tbl_dishes.DEACTIVATE.BTN_LBL}" onclick="actiontbl_dishes('{$smarty.const.ACTION_DEACTIVATE}');" /><input data-inline="true" data-icon="active" type="button" value="{$_lang.tbl_dishes.ACTIVATE.BTN_LBL}" onclick="actiontbl_dishes('{$smarty.const.ACTION_ACTIVATE}');" />{/if}<input data-inline="true" data-icon="add-item" onclick="window.location.href='{$page_url}?mode={$smarty.const.MODE_CREATE}'" type="button" value="{$_lang.tbl_dishes.CREATE.BTN_LBL}"/></div></div>{include file="tbl_dishes/js.tpl"}{include file="footer.tpl"}