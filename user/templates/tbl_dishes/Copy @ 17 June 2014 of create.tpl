{include file="header.tpl"}<div class="wrapper"><h1>{$_lang.tbl_dishes.create_title}</h1>{if $error_msg}	<center>{$error_msg}</center>{/if}<form name="frmcreatetbl_dishes" id="frmcreatetbl_dishes" onsubmit="return validatetbl_dishes();" method="POST" action="{$page_url}" enctype="multipart/form-data">	<input type="hidden" name="dish_id" id="dish_id" value="0"/>	<div style="display:none;" class="error" id="dish_id_err"></div>	<div class="field-row">		<label for="dish_name">{$_lang.tbl_dishes.label.dish_name}</label>		<input type="text" name="dish_name" id="dish_name" value="{$smarty.post.dish_name}"/>		<div class="error" id="dish_name_err"></div>	</div>		<div class="field-row">		<label for="dish_img">{$_lang.tbl_dishes.label.dish_img}</label>		<input type="file" name="dish_img" id="dish_img" value="{$smarty.post.dish_img}"/> 		<div class="info">{$_lang.tbl_dishes.image_size_info}</div>		<div class="error" id="dish_img_err"></div>	</div>    <div class="field-row">		<label for="dish_notes">{$_lang.tbl_dishes.label.dish_notes}</label>		<textarea name="dish_notes" id="dish_notes">{$smarty.post.dish_notes}</textarea>		<div class="error" id="dish_notes_err"></div>	</div>		<div class="field-row">		<label for="dish_pair_note">{$_lang.tbl_dishes.label.dish_pair_note}</label>		<textarea name="dish_pair_note" id="dish_pair_note">{$smarty.post.dish_pair_note}</textarea>		<div class="error" id="dish_pair_note_err"></div>	</div>		<div class="field-row">		<label for="dish_food_wine_pair">{$_lang.tbl_dishes.label.dish_food_wine_pair}</label>		<!-- <textarea name="dish_food_wine_pair" id="dish_food_wine_pair">{$smarty.post.dish_food_wine_pair}</textarea> -->		<select id="dish_food_wine_pair" name="dish_food_wine_pair[]" multiple="multiple" data-native-menu="false">         <option value="" data-placeholder="true">Select dishes </option>		 {foreach $lst_dishes as $_eachdish}		 	<option value="{$_eachdish@key}" {if $smarty.request.dish_food_wine_pair eq $_eachdish@key}selected="selected"{/if}>{$_eachdish}</option>		 {/foreach}		 </select>		<div class="error" id="dish_food_wine_pair_err"></div>	</div>		<div class="field-row">		<label for="dish_attributes">{$_lang.tbl_dishes.label.dish_attributes}</label>        <select id="dish_attributes" name="dish_attributes[]" multiple="multiple" data-native-menu="false">         <option value="" data-placeholder="true">Select attributes</option>		 {foreach $lst_dish_attribs as $attrib}		 	<option value="{$attrib@key}" {if $smarty.request.dish_attributes eq $attrib@key}selected="selected"{/if}>{$attrib}</option>		 {/foreach}		 </select>		<div class="error" id="dish_attributes_err"></div>	</div>    <fieldset data-role="controlgroup" data-type="horizontal" style="width:100%px;border-bottom:solid white 1px;" >	<legend>Choose a type:</legend>     	<label for="dish_is_drink_1"><input type="radio" name="dish_is_drink" id="dish_is_drink_1" value="0" checked="checked" onclick='show_tab("dish");' />     	{$_lang.tbl_dishes.regular_dish}</label>        <label for="dish_is_drink_2"><input type="radio" name="dish_is_drink" id="dish_is_drink_2" value="1" onclick='show_tab("wine");' />     	{$_lang.tbl_dishes.wine}</label>    </fieldset>    <!-- REGULAR DISH -->    <div id='reg_dish' >        {include file="tbl_dishes/create_view_dish.tpl"}        <!-- ==========START  NUTRITION========= -->        <fieldset data-role="controlgroup" data-type="horizontal" style="width:100%px;border-bottom:solid white 1px;" >    	<legend>Choose Nutrition Option:</legend>         	<label for="dish_is_nutrition_text_1"><input type="radio" name="dish_is_nutrition_text" id="dish_is_nutrition_text_1" value="0" checked="checked" onclick='show_nutri_tab("table");' />         	{$_lang.tbl_dishes.nutri_table}</label>            <label for="dish_is_nutrition_text_2"><input type="radio" name="dish_is_nutrition_text" id="dish_is_nutrition_text_2" value="1" onclick='show_nutri_tab("text");' />         	{$_lang.tbl_dishes.nutri_text}</label>        </fieldset>        <!-- NUTRI TABLE -->        <div id='nutri_table' >            {include file="tbl_dishes/nutrition.tpl"}        </div>        <!-- NUTRI TABLE END -->        <!-- TEXT TYPE -->        <div id='nutri_text' style='display:none;'>           <div class="field-row">        		<label for="dish_nutri_cal_info">{$_lang.tbl_dishes.label.dish_nutri_cal_info}</label>        		<textarea name="dish_nutri_cal_info" id="dish_nutri_cal_info">{$smarty.post.dish_nutri_cal_info}</textarea>        		<div class="error" id="dish_nutri_cal_info_err"></div>        	</div>        </div>        <!-- TEXT TYPE -->        <!-- ==========END  NUTRITION========= -->            </div>    <!-- REGULAR DISH END -->    <!-- WINE DISH -->    <div id='wine_dish' style='display:none;'>       {include file="tbl_dishes/create_view_wine.tpl"}    </div>    <!-- WINE DISH END -->    <!--	<div class="field-row">		<label for="dish_start_date">{$_lang.tbl_dishes.label.dish_start_date}</label>		<input type="text" name="dish_start_date" id="dish_start_date" value="{$smarty.post.dish_start_date}"/>		<div class="error" id="dish_start_date_err"></div>	</div>	-->	<!--	<div class="field-row">		<label for="dish_end_date">{$_lang.tbl_dishes.label.dish_end_date}</label>		<input type="text" name="dish_end_date" id="dish_end_date" value="{$smarty.post.dish_end_date}"/>		<div class="error" id="dish_end_date_err"></div>	</div>	-->	<input  type="hidden" id="action" name="action" value="{$smarty.const.ACTION_CREATE}"/>	{html_input type="hidden" name="dish_restaurent" value=$smarty.session[$smarty.const.SES_RESTAURANT]}		<div class="biz_center">		<input data-inline="true" data-icon="save" class="fleft" type="submit" value="{$_lang.save_lbl}"/> 		<input data-inline="true" data-icon="delete" class="fright" type="reset" value="{$_lang.cancel_lbl}" onclick="window.location.href='{$page_url}'"/>	</div>	</form>{include file="tbl_dishes/js.tpl"}</div>{include file="footer.tpl"}