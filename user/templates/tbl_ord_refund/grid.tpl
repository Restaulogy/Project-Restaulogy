{include file='header.tpl'}<div class="wrapper"><h1>{$_lang.tbl_ord_refund.listing_title}</h1>{if $error_msg}	<center>{$error_msg}</center>{/if}{if $result_found gt 0 && $tbl_ord_refundlist}	<table class="biz_data_grid">		<tr>			<th class="{if $smarty.get.sort_on eq 'refund_paypal_txn_id'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=refund_paypal_txn_id&sort_by={$new_sort}">{$_lang.tbl_ord_refund.label.refund_paypal_txn_id}</a></th>			<th class="{if $smarty.get.sort_on eq 'refund_note'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=refund_note&sort_by={$new_sort}">{$_lang.tbl_ord_refund.label.refund_note}</a></th>			<th class="{if $smarty.get.sort_on eq 'refund_amnt'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=refund_amnt&sort_by={$new_sort}">{$_lang.tbl_ord_refund.label.refund_amnt}</a></th>			<th class="action_header">Action</th>		</tr>		{foreach from=$tbl_ord_refundlist item=tbl_ord_refunditem}		<tr class="{cycle values="odd,even"}">			<td><a href="{$page_url}?mode={$smarty.const.MODE_VIEW}&refund_id={$tbl_ord_refunditem.refund_id}">{$tbl_ord_refunditem.refund_paypal_txn_id}</a></td>			<td>{$tbl_ord_refunditem.refund_note}</td>			<td>{$tbl_ord_refunditem.refund_amnt}</td>			<td><a href="{$page_url}?mode={$smarty.const.MODE_UPDATE}&refund_id={$tbl_ord_refunditem.refund_id}" class="editIcon"></a><a class="deleteIcon" href="#" onclick="deletetbl_ord_refund({$tbl_ord_refunditem.refund_id});"></a>{if $tbl_ord_refunditem.isActive eq 1}<a href="{$page_url}?action={$smarty.const.ACTION_DEACTIVATE}&refund_id={$tbl_ord_refunditem.refund_id}" class="deactiveIcon" title="{$_lang.tbl_ord_refund.DEACTIVATE.BTN_LBL}"></a>{else}<a href="{$page_url}?action={$smarty.const.ACTION_ACTIVATE}&refund_id={$tbl_ord_refunditem.refund_id}" class="activeIcon" title="{$_lang.tbl_ord_refund.ACTIVATE.BTN_LBL}"></a>{/if}</td>		</tr>	{/foreach}		<tfoot>			<tr>				<td colspan="6">					# {$result_found}&nbsp;&nbsp;&nbsp;{if $pagination neq ""}{$pagination}{/if}					<select onchange="changePage('{$navigationURL}',this.value,{$smarty.request.limit});">					{if $allPageCount gt 1}						{for $foo=1 to $allPageCount}							<option value="{$foo}" {if $foo eq $currentPage}selected="selected"{/if}>{$foo}</option>						{/for}					{else}						<option value="1" disabled="disabled">1</option>					{/if}					</select>				</td>			</tr>		</tfoot>	</table>{else}	<div class="error">{$_lang.tbl_ord_refund.no_record_found}</div>{/if}<center><input data-icon="add-item" data-inline="true" onclick="window.location.href='{$page_url}?mode={$smarty.const.MODE_CREATE}'" type="button" value="{$_lang.tbl_ord_refund.CREATE.BTN_LBL}"/></center></div>{include file="tbl_ord_refund/js.tpl"}{include file="footer.tpl"}