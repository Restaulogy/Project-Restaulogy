{include file='header.tpl'}<div class="wrapper"><h1>{$_lang.biz_rewards.listing_title}</h1>{if $error_msg}	<center>{$error_msg}</center>{/if}{if $result_found gt 0 && $biz_rewardslist}<form name="frm_biz_rewards" id="frm_biz_rewards"  method="POST" action="{$page_url}" >	<table class="listTable">		<tr>		<th style="width:2%;"></th>        <th class="bigListItem">{$_lang.biz_rewards.title}</th>        <th style="width:5%;">                {$_lang.main.status}		</th>        </tr>		{foreach from=$biz_rewardslist item=biz_rewardsitem}			<tr>                <td style="width:2%;">					<label for="sel_biz_rewards{$biz_rewardsitem.rwd_id}" data-mini="true" style="width:23px;" >                    <input type="checkbox" data-inline='true' data-mini='true' id="sel_biz_rewards{$biz_rewardsitem.rwd_id}" name="sel_biz_rewards[{$biz_rewardsitem.rwd_id}]" />&nbsp;</label>				</td>				<td class="bigListItem">                    <a href="{$page_url}?mode={$smarty.const.MODE_UPDATE}&rwd_id={$biz_rewardsitem.rwd_id}">{$biz_rewardsitem.rwd_cup_id}</a><br>                  <!--                   >> <a href="{$website}/modules/business_listing/show.php?show_type=PR&lid=1&promoid={$biz_rewardsitem.rwd_coupon_id}" target="_blank">{$biz_rewardsitem.prom_title}</a><br>                   -->                    <small>                    {if $biz_rewardsitem.rwd_type eq 'visit_based'}                          {$_lang.biz_rewards.visit_based_number} {$biz_rewardsitem.rwd_check_in}                    {else}                          {$_lang.biz_rewards.point_based_number|sprintf:"{$biz_rewardsitem.rwd_point_limit}"} {$biz_rewardsitem.rwd_one_point_val}                    {/if}                    </small>                             {assign var="promo_img_src" value=""}		 {if ($biz_rewardsitem.img_ext eq '')||($biz_rewardsitem.img_ext eq '0')}		    {if $biz_rewardsitem.restaurent_img !=""}				 {assign var="promo_img_src" value=$promo_img_src|cat:"images/restaurant/"|cat:$biz_rewardsitem.rwd_buss_id|cat:"."|cat:$biz_rewardsitem.restaurent_img}			{else}    		     {assign var="promo_img_src" value=$promo_img_src|cat:"modules/business_listing/templates/template_mobile/images/nologo.jpg"}			{/if}		{else}		    {assign var="promo_img_src" value=$promo_img_src|cat:"modules/business_listing/promotion_images/"|cat:$biz_rewardsitem.rwd_coupon_id|cat:"."|cat:$biz_rewardsitem.img_ext}		{/if}        <p>        <a href="{$website}/modules/business_listing/show.php?show_type=PR&lid=1&promoid={$biz_rewardsitem.rwd_coupon_id}" target="_blank">                   <img src="{$website}/{$promo_img_src}" style='width:100px;height:100px;'/>                   {$biz_rewardsitem.prom_title}<br>                   {$biz_rewardsitem.comments}            </a>            </p>                </td>				<td >                <!--                <a href="{$page_url}?mode={$smarty.const.MODE_UPDATE}&rwd_id={$biz_rewardsitem.rwd_id}" class="editIcon"></a>                <a class="deleteIcon" href="#" onclick="deletebiz_rewards({$biz_rewardsitem.rwd_id});"></a>                -->                {if $biz_rewardsitem.isActive eq 1}                  <a href="#" class="activeIcon" title="{$_lang.biz_rewards.ACTIVATE.BTN_LBL}"></a>                {else}                  <a href="#" class="deactiveIcon" title="{$_lang.biz_rewards.DEACTIVATE.BTN_LBL}"></a>                {/if}                </td>			</tr>	{/foreach}	</table>	{html_input type="hidden" name="action"}</form>{else}	<div class="error">{$_lang.biz_rewards.no_record_found}</div>{/if}{if $pagination}	<center>{$pagination}</center>{/if}<div class="biz_center">{if $result_found gt 0 && $biz_rewardslist}	{jqmbutton icon="briefcase" value="{$_lang.main.toggle}" onclick="javascript:$('input[type=checkbox]').click();"}	{jqmbutton type="delete" onclick="actionbiz_rewards('{$smarty.const.ACTION_DELETE}');"}	{jqmbutton icon="inactive" value="{$_lang.tbl_tip_distribution.DEACTIVATE.BTN_LBL}" onclick="actionbiz_rewards('{$smarty.const.ACTION_DEACTIVATE}');"}	{jqmbutton icon="active" value="{$_lang.tbl_tip_distribution.ACTIVATE.BTN_LBL}" onclick="actionbiz_rewards('{$smarty.const.ACTION_ACTIVATE}');"}		<input data-icon="star" data-inline="true" onclick="window.open('{$website}/modules/business_listing/promotionslisting.php?show_type=PR&listing_type=reward');" type="button" value="{$_lang.biz_rewards.promotions}"/>{/if}<input data-icon="add-item" data-inline="true" onclick="window.location.href='{$page_url}?mode={$smarty.const.MODE_CREATE}'" type="button" value="{$_lang.biz_rewards.CREATE.BTN_LBL}"/></div></div>{include file="biz_rewards/js.tpl"}{include file="footer.tpl"}