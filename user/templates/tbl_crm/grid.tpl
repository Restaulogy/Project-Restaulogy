{include file='header.tpl'}<div class="wrapper"><h1>{$_lang.tbl_crm.listing_title}</h1>{if $error_msg}	<center>{$error_msg}</center>{/if}{if $result_found gt 0 && $tbl_crmlist}	<table class="biz_data_grid">		<tr>			<th class="{if $smarty.get.sort_on eq 'crm_cust_id'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=crm_cust_id&sort_by={$new_sort}">{$_lang.tbl_crm.label.crm_cust_id}</a></th>			<th class="{if $smarty.get.sort_on eq 'crm_cust_email'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=crm_cust_email&sort_by={$new_sort}">{$_lang.tbl_crm.label.crm_cust_email}</a></th>			<th class="{if $smarty.get.sort_on eq 'crm_cust_type'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=crm_cust_type&sort_by={$new_sort}">{$_lang.tbl_crm.label.crm_cust_type}</a></th>			<th class="{if $smarty.get.sort_on eq 'crm_is_subsribed'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=crm_is_subsribed&sort_by={$new_sort}">{$_lang.tbl_crm.label.crm_is_subsribed}</a></th>			<th class="action_header">Action</th>		</tr>		{foreach from=$tbl_crmlist item=tbl_crmitem}		<tr class="{cycle values="odd,even"}">			<td><a href="{$page_url}?mode={$smarty.const.MODE_VIEW}&crm_id={$tbl_crmitem.crm_id}">{$tbl_crmitem.crm_cust_id}</a></td>			<td>{$tbl_crmitem.crm_cust_email}</td>			<td>{$tbl_crmitem.crm_cust_type}</td>			<td>{$tbl_crmitem.crm_is_subsribed}</td>			<td><a href="{$page_url}?mode={$smarty.const.MODE_UPDATE}&crm_id={$tbl_crmitem.crm_id}" class="editIcon"></a><a class="deleteIcon" href="#" onclick="deletetbl_crm({$tbl_crmitem.crm_id});"></a>{if $tbl_crmitem.isActive eq 1}<a href="{$page_url}?action={$smarty.const.ACTION_DEACTIVATE}&crm_id={$tbl_crmitem.crm_id}" class="deactiveIcon" title="{$_lang.tbl_crm.DEACTIVATE.BTN_LBL}"></a>{else}<a href="{$page_url}?action={$smarty.const.ACTION_ACTIVATE}&crm_id={$tbl_crmitem.crm_id}" class="activeIcon" title="{$_lang.tbl_crm.ACTIVATE.BTN_LBL}"></a>{/if}</td>		</tr>	{/foreach}		<tfoot>			<tr>				<td colspan="7">					# {$result_found}&nbsp;&nbsp;&nbsp;{if $pagination neq ""}{$pagination}{/if}					<select onchange="changePage('{$navigationURL}',this.value,{$smarty.request.limit});">					{if $allPageCount gt 1}						{for $foo=1 to $allPageCount}							<option value="{$foo}" {if $foo eq $currentPage}selected="selected"{/if}>{$foo}</option>						{/for}					{else}						<option value="1" disabled="disabled">1</option>					{/if}					</select>				</td>			</tr>		</tfoot>	</table>{else}	<div class="error">{$_lang.tbl_crm.no_record_found}</div>{/if}<center><input data-icon="add-item" data-inline="true" onclick="window.location.href='{$page_url}?mode={$smarty.const.MODE_CREATE}'" type="button" value="{$_lang.tbl_crm.CREATE.BTN_LBL}"/></center></div>{include file="tbl_crm/js.tpl"}{include file="footer.tpl"}