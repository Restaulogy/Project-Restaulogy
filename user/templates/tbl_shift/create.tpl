{include file="header.tpl"}<div class="wrapper"><h1>{$_lang.tbl_shift.title}</h1>{if $error_msg}	<center>{$error_msg}</center>{/if}{include file="tbl_shift/tabs.tpl"}<form name="frmcreatetbl_shift" id="frmcreatetbl_shift" onsubmit="return  validatetbl_shift();" method="POST" action="{$page_url}">	<input type="hidden" name="shift_id" id="shift_id" value="0"/>	<div style="display:none;" class="error" id="shift_id_err"></div>	<label for="shift_name">{$_lang.tbl_shift.label.shift_name}</label>	<input type="text" name="shift_name" id="shift_name" value="{$smarty.post.shift_name}"/>	<div class="error" id="shift_name_err"></div>    <table style="width:100%">		<tr>			<td><label for="shift_start_time">{$_lang.tbl_shift.label.shift_start_time}</label></td>			<td>&nbsp;</td>			<td><label for="shift_end_time">{$_lang.tbl_shift.label.shift_end_time}</label></td>		</tr>		<tr>			<td><input type="text" readonly="readonly" name="shift_start_time" id="shift_start_time" value="{$smarty.post.shift_start_time}"/></td>			<td>&nbsp;</td>			<td><input type="text" readonly="readonly" name="shift_end_time" id="shift_end_time" value="{$smarty.post.shift_end_time}"/></td>		</tr>		<tr>			<td><div class="error" id="shift_start_time_err"></div></td>			<td>&nbsp;</td>			<td><div class="error" id="shift_end_time_err"></div></td>		</tr>			</table>		<div class="field-row">		<label for="sft_wkdy_avail">{$_lang.tbl_shift_weekdays.listing_title}</label>        <fieldset data-role="controlgroup" data-type="horizontal" data-mini="true">        <label><input type="checkbox" name="sft_wkdy_avail[]" value="Sun" checked="checked" /> Su</label>        <label><input type="checkbox" name="sft_wkdy_avail[]" value="Mon" checked="checked" /> Mo</label>        <label><input type="checkbox" name="sft_wkdy_avail[]" value="Tue" checked="checked"/> Tu</label>        <label><input type="checkbox" name="sft_wkdy_avail[]" value="Wed" checked="checked"/> We</label>        <label><input type="checkbox" name="sft_wkdy_avail[]" value="Thu" checked="checked"/> Th</label>        <label><input type="checkbox" name="sft_wkdy_avail[]" value="Fri" checked="checked" /> Fr</label>        <label><input type="checkbox" name="sft_wkdy_avail[]" value="Sat" checked="checked" /> Sa</label>		</fieldset>		<div class="error" id="sft_wkdy_avail_err"></div>		<div class="info">{$_lang.main.wkday_avail_note}</div>	</div>	<label for="shift_created_on">{$_lang.tbl_shift.label.shift_created_on}</label>	<input type="text" id="shift_created_on" name="shift_created_on" value="{$emp_sft_date|date_format:$smarty.const.HTML5_DAY_FORMAT}" placeholder="From" readonly="readonly">	<div class="error" id="shift_created_on_err"></div> 	<label for="shift_terminated_on">{$_lang.tbl_shift.label.shift_terminated_on}</label>	<input type="text" name="shift_terminated_on" id="shift_terminated_on" value="{$smarty.post.shift_terminated_on|date_format:$smarty.const.HTML5_DAY_FORMAT}"/>	<div class="error" id="shift_terminated_on_err"></div>  	<center>	<input type="hidden" id="action" name="action" value="create"/>	{html_input type="hidden" name="shift_restaurent" value=$smarty.session[$smarty.const.SES_RESTAURANT]}	<input class="fleft" type="submit" data-inline="true" data-icon="save" value="{$_lang.save_lbl}"/> <input data-inline="true" data-icon="delete" type="reset" value="{$_lang.cancel_lbl}" onclick="window.location.href='{$page_url}'"/></center>	</form>{include file="tbl_shift/js.tpl"}</div>{include file="footercontent.tpl"}{literal}    <script>        $(function(){        	$("#shift_start_time").scroller({ preset: 'time', timeFormat: 'HH:ii', timeWheels: 'HHii', animate: 'pop'});        	$("#shift_end_time").scroller({ preset: 'time', timeFormat: 'HH:ii', timeWheels: 'HHii', animate: 'pop'});        	$("#shift_created_on, #shift_terminated_on").scroller({ display:'bubble', preset: 'date', dateFormat: 'mm/dd/yyyy', timeWheels: 'yyyymmdd', animate: 'slidevertical'});        	        })    </script>{/literal}</body></html>