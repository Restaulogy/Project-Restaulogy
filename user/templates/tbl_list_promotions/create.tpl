{include file="header.tpl"}<div class="wrapper"><h1>{$_lang.tbl_list_promotions.create_title}</h1>{if $error_msg}	<center>{$error_msg}</center>{/if}<form name="frmcreatetbl_list_promotions" id="frmcreatetbl_list_promotions" onsubmit="return validatetbl_list_promotions();" method="POST" action="{$page_url}">	<input type="hidden" name="id" id="id" value="0"/>	<div style="display:none;" class="error" id="id_err"></div>	<!--<label for="list_id">{$_lang.tbl_list_promotions.label.list_id}</label>-->	<input type="hidden" name="list_id" id="list_id" value="{$Global_member[staff_restaurent]}"/>	<div class="error" id="list_id_err"></div>	<label for="title">{$_lang.tbl_list_promotions.label.title}</label>	<input type="text" name="title" id="title" value="{$smarty.post.title}"/>	<div class="error" id="title_err"></div>	<label for="pdf">{$_lang.tbl_list_promotions.label.pdf}</label>	{if $promotion.id && $is_renew_promotion neq 1}    		 	    <a href="pdf/{$promotion.pdf}" target="_blank">{$promotion.title}</a><br>                {/if}                <input type="checkbox" value="1" id="new_pdf" name="new_pdf" onchange="change_for_new_pdf();" onclick="change_for_new_pdf();"/>                <label for="new_pdf">Add New pdf</label>             <input type="file" size="15" id="pdf" name="pdf" {if $promotion.id}disabled="disabled"{/if}/> &nbsp;&nbsp; 	 	<div class="error" id="pdf_err"></div>		<label for="pdf">{$_lang.tbl_list_promotions.label.template}</label>	 <select name="template_id" id="template_id">     {if $templates_info} 		{section name=itm loop=$templates_info}                <option  value="{$templates_info[itm].id}"  {if $templates_info[itm].id == $template_id || $templates_info[itm].id == $smarty.post.template_id }selected="selected"{/if}>{$templates_info[itm].title}</option>        {/section}    {/if}    </select>    <input type="button" onclick="call_preview({if $promotion.id && $is_renew_promotion neq 1}{$promotion.id}{else}0{/if}, $('#template_id').val());" name="preview" value="Preview" />	<div class="error" id="template_err"></div>	<label for="comments">{$_lang.tbl_list_promotions.label.comments}</label>	<textarea name="comments" id="comments">{$smarty.post.comments}</textarea>	<div class="error" id="comments_err"></div>	<label for="start_date">{$_lang.tbl_list_promotions.label.start_date}</label>	<input type="text" name="start_date" id="start_date" value="{$smarty.post.start_date}"/>	<div class="error" id="start_date_err"></div>	<label for="end_date">{$_lang.tbl_list_promotions.label.end_date}</label>	<input type="text" name="end_date" id="end_date" value="{$smarty.post.end_date}"/>	<div class="error" id="end_date_err"></div>	<label for="states">{$_lang.tbl_list_promotions.label.states}</label> 	<select name="states" id="states" onchange="change_metro_area_by_state('states','metro_area')">		<option value=''>{$_lang.select_states}</option>		{foreach $state_list as $state}		<option value='{$state@key}' {if $smarty.post.states eq $state}selected="selected"{/if}>{$state}</option>		{/foreach}	</select>	<div class="error" id="states_err"></div>	<label for="metro_area">{$_lang.tbl_list_promotions.label.metro_area}</label>	<select name="metro_area" id="metro_area">	<option value=''>{$_lang.select_metro_area}</option>		</select>	<div class="error" id="metro_area_err"></div> 	<!--<label for="promotion_id">{$_lang.tbl_list_promotions.label.promotion_id}</label>	<input type="text" name="promotion_id" id="promotion_id" value="{$smarty.post.promotion_id}"/>	<div class="error" id="promotion_id_err"></div>-->	<label for="img_ext">{$_lang.tbl_list_promotions.label.img_ext}</label> 	<input type="checkbox" name="use_list_img" value="1" id="use_list_img" onclick="change_image_file();" onchange="change_image_file();"/>                        <label for="use_list_img">Use Listing logo</label>            {if  $promotion.img_ext  || $promotion.img_ext neq '0'}                    <a target="_blank" href="promotion_images/{$promotion.id}.{$promotion.img_ext}">{$promotion.title}</a><br>            {/if}				<input type="file" size="15" name="promo_img" ACCEPT="text/html, image/jpeg" style="width:10px;" id="promo_img">&nbsp;&nbsp;	<div class="error" id="img_ext_err"></div>	<!--<label for="views_count">{$_lang.tbl_list_promotions.label.views_count}</label>	<input type="text" name="views_count" id="views_count" value="{$smarty.post.views_count}"/>	<div class="error" id="views_count_err"></div>-->	<label for="is_pdf_uploaded">{$_lang.tbl_list_promotions.label.is_pdf_uploaded}</label>	<input type="text" name="is_pdf_uploaded" id="is_pdf_uploaded" value="{$smarty.post.is_pdf_uploaded}"/>	<div class="error" id="is_pdf_uploaded_err"></div>	<label for="cupon_type">{$_lang.tbl_list_promotions.label.cupon_type}</label>	<select name="cupon_type" id="cupon_type" onchange="change_cupons();">		{if $coupon_types}			{foreach  $coupon_types as $coupon}				<option value="{$coupon@key}"{if $coupon@key eq $smarty.post.cupon_type}selected="selected"{/if}>{$coupon}</option>			{/foreach} 		{/if}	</select>	<div class="error" id="cupon_type_err"></div>	<div id="allowed_cupons_row" style="display:none;">	<label for="allowed_cupons">{$_lang.tbl_list_promotions.label.allowed_cupons}</label>	<input type="text" name="allowed_cupons" id="allowed_cupons" value="{$smarty.post.allowed_cupons}"/>	<div class="error" id="allowed_cupons_err"></div>	</div>	<!--<label for="redimed_cupons">{$_lang.tbl_list_promotions.label.redimed_cupons}</label>	<input type="text" name="redimed_cupons" id="redimed_cupons" value="{$smarty.post.redimed_cupons}"/>	<div class="error" id="redimed_cupons_err"></div>-->	<input type="hidden" id="action" name="action" value="{$smarty.const.ACTION_CREATE}"/><input class="fleft" type="submit" value="{$_lang.save_lbl}"/> <input  class="fright" type="reset" value="{$_lang.cancel_lbl}" onclick="window.location.href='{$page_url}'"/></form></div>{include file="footercontent.tpl"}{include file="tbl_list_promotions/js.tpl"}	</body></html> 