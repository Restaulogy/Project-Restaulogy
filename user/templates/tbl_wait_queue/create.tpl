{include file="header.tpl"}<div class="wrapper"><h1>{$_lang.tbl_wait_queue.create_title}</h1>{if $error_msg}	<center>{$error_msg}</center>{/if}<form name="frmcreatetbl_wait_queue" id="frmcreatetbl_wait_queue" onsubmit="return validatetbl_wait_queue();" method="POST" action="{$page_url}">	<input type="hidden" name="wt_que_id" id="wt_que_id" value="0"/>	<div style="display:none;" class="error" id="wt_que_id_err"></div>	<div class="field-row">		<label for="wt_que_customer">{$_lang.tbl_wait_queue.label.wt_que_customer}</label>		<input type="text" name="wt_que_customer" id="wt_que_customer" value="{if $smarty.session[$smarty.const.SES_CUSTOMER] neq ""}{$smarty.session[$smarty.const.SES_CUSTOMER]}{else}{$smarty.post.wt_que_customer}{/if}"/>		<div class="error" id="wt_que_customer_err"></div>	</div>	<div class="field-row">		<label for="wt_que_cust_ph_no">{$_lang.tbl_wait_queue.label.wt_que_cust_ph_no}</label>		<input type="text" name="wt_que_cust_ph_no" id="wt_que_cust_ph_no" value="{if $smarty.session[$smarty.const.SES_CUST_PHONE] neq ""}{$smarty.session[$smarty.const.SES_CUST_PHONE]}{else}{$smarty.post.wt_que_cust_ph_no}{/if}" {if $isCustomer && $smarty.session[$smarty.const.SES_CUST_PHONE] neq ""}readonly="readonly"{/if}/>		<div class="error" id="wt_que_cust_ph_no_err"></div>	</div>	<div class="field-row">		<label for="wt_que_party_size">{$_lang.tbl_wait_queue.label.wt_que_party_size}</label>		 		<select name="wt_que_party_size" onclick="calculate_est_time();" id="wt_que_party_size">		<option value="">Select Party Size</option>		{for $i=1 to 20}		<option value="{$i}" {if $smarty.post.wt_que_party_size eq $i}selected="selected"{/if}>{$i}</option>		{/for}		</select>				<div class="error" id="wt_que_party_size_err"></div>	</div>	<div class="field-row">		<label for="wt_que_table_type">{$_lang.tbl_wait_queue.label.wt_que_table_type}</label>		<select name="wt_que_table_type" onclick="calculate_est_time();" id="wt_que_table_type">		<option  value="">Select Table Type</option>		{foreach $table_types as $val}			<option value="{$val@key}" {if $smarty.post.wt_que_table_type eq $val@key}selected="selected"{/if}>{$val}</option>		{/foreach} 		</select> 		<div class="error" id="wt_que_table_type_err"></div>	</div>	<div class="field-row" {if $isCustomer}style="display:none;"{/if}>		<label for="wt_que_table_id">{$_lang.tbl_wait_queue.label.wt_que_table_id}</label>				<input type="text" name="wt_que_table_id" id="wt_que_table_id" value="{$smarty.post.wt_que_table_id}"/>		<div class="error" id="wt_que_table_id_err"></div>	</div>	<div class="field-row">		<label for="wt_que_exp_time">{$_lang.tbl_wait_queue.label.wt_que_exp_time}</label>					<label {if $isCustomer}{else}style="display:none;"{/if} id="lbl_wt_que_exp_time">0 Min</label> 			<input type="text" name="wt_que_exp_time" id="wt_que_exp_time" value="{$smarty.session[$smarty.const.SES_EST_TIME]}" {if $isCustomer}style="display:none;"{/if}/>			<div class="error" id="wt_que_exp_time_err" {if $isCustomer}style="display:none;"{/if}></div>					</div>  	<input type="hidden" name="wt_que_restaurant" id="wt_que_restaurant" value="{$smarty.post.wt_que_restaurant}"/>	<input type="hidden" name="wt_que_by_cust" value="{if $isCustomer}1{else}0{/if}" id="wt_que_by_cust"/>	<input type="hidden" name="wt_que_is_cancelled" id="wt_que_is_cancelled" value="{$smarty.post.wt_que_is_cancelled}"/>		<center><input type="hidden" id="action" name="action" value="{$smarty.const.ACTION_CREATE}"/><input data-inline="true" data-icon="save" type="submit" value="{$_lang.save_lbl}"/> <input data-inline="true" data-icon="delete" type="reset" value="{$_lang.cancel_lbl}" onclick="window.location.href='{$page_url}'"/></center></form> </div> {include file="footercontent.tpl"}{include file="tbl_wait_queue/js.tpl"}</body></html> 