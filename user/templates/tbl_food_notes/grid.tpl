{include file='header.tpl'}<div class="wrapper"><h1>{$_lang.tbl_food_notes.listing_title}</h1>{if $error_msg}	<center>{$error_msg}</center>{/if}{if $result_found gt 0 && $tbl_food_noteslist}	<table class="biz_data_grid">		<tr>			<th class="{if $smarty.get.sort_on eq 'fdnote_number'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=fdnote_number&sort_by={$new_sort}">{$_lang.tbl_food_notes.label.fdnote_number}</a></th>			<th class="{if $smarty.get.sort_on eq 'fdnote_desc'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=fdnote_desc&sort_by={$new_sort}">{$_lang.tbl_food_notes.label.fdnote_desc}</a></th>			<th class="action_header">Action</th>		</tr>		{foreach from=$tbl_food_noteslist item=tbl_food_notesitem}		<tr class="{cycle values="odd,even"}">			<td><a href="{$page_url}?mode={$smarty.const.MODE_VIEW}&fdnote_id={$tbl_food_notesitem.fdnote_id}">{$tbl_food_notesitem.fdnote_number}</a></td>			<td>{$tbl_food_notesitem.fdnote_desc}</td>			<td><a href="{$page_url}?mode={$smarty.const.MODE_UPDATE}&fdnote_id={$tbl_food_notesitem.fdnote_id}" class="editIcon"></a><a class="deleteIcon" href="#" onclick="deletetbl_food_notes({$tbl_food_notesitem.fdnote_id});"></a>{if $tbl_food_notesitem.isActive eq 1}<a href="{$page_url}?action={$smarty.const.ACTION_DEACTIVATE}&fdnote_id={$tbl_food_notesitem.fdnote_id}" class="deactiveIcon" title="{$_lang.tbl_food_notes.DEACTIVATE.BTN_LBL}"></a>{else}<a href="{$page_url}?action={$smarty.const.ACTION_ACTIVATE}&fdnote_id={$tbl_food_notesitem.fdnote_id}" class="activeIcon" title="{$_lang.tbl_food_notes.ACTIVATE.BTN_LBL}"></a>{/if}</td>		</tr>	{/foreach}		<tfoot>			<tr>				<td colspan="5">					# {$result_found}&nbsp;&nbsp;&nbsp;{if $pagination neq ""}{$pagination}{/if}					<select onchange="changePage('{$navigationURL}',this.value,{$smarty.request.limit});">					{if $allPageCount gt 1}						{for $foo=1 to $allPageCount}							<option value="{$foo}" {if $foo eq $currentPage}selected="selected"{/if}>{$foo}</option>						{/for}					{else}						<option value="1" disabled="disabled">1</option>					{/if}					</select>				</td>			</tr>		</tfoot>	</table>{else}	<div class="error">{$_lang.tbl_food_notes.no_record_found}</div>{/if}<center><input data-icon="add-item" data-inline="true" onclick="window.location.href='{$page_url}?mode={$smarty.const.MODE_CREATE}'" type="button" value="{$_lang.tbl_food_notes.CREATE.BTN_LBL}"/></center></div>{include file="tbl_food_notes/js.tpl"}{include file="footer.tpl"}