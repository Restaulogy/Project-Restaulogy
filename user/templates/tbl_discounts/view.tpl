{include file="header.tpl"}<div class="wrapper"><h1>{$_lang.tbl_discounts.title}</h1>{if $error_msg}	<center>{$error_msg}</center>{/if}<form name="frmupdatetbl_discounts" id="frmupdatetbl_discounts" onsubmit="return validatetbl_discounts();" method="POST" action="{$page_url}" style="{if $isUpdate eq 1}{else}display:none;{/if}">	<input type="hidden" name="discount_id" id="discount_id" value="{$tbl_discountsinfo.discount_id}"/>	<div style="display:none;" class="error" id="discount_id_err"></div>	<div class="field-row">		<label for="discount_name">{$_lang.tbl_discounts.label.discount_name}</label>		<input type="text" name="discount_name" id="discount_name" value="{$tbl_discountsinfo.discount_name}"/>		<div class="error" id="discount_name_err"></div>	</div>	<div class="field-row">		<label for="discount_desc">{$_lang.tbl_discounts.label.discount_desc}</label>		<textarea name="discount_desc" id="discount_desc">{$tbl_discountsinfo.discount_desc}</textarea>		<div class="error" id="discount_desc_err"></div>	</div><!--	<div class="field-row">		<label for="discount_percent">{$_lang.tbl_discounts.label.discount_percent}</label>		<input type="text" name="discount_percent" id="discount_percent" value="{$tbl_discountsinfo.discount_percent}"/>		<div class="error" id="discount_percent_err"></div>	</div>-->		<div class="field-row">		<label for="discount_percent">{$_lang.tbl_discounts.label.discount_percent}</label>				<table>			<tr>					<td class="biz_top_align bigListItem">						<input maxlength="6" id="discount_percent" type="text" value="{$tbl_discountsinfo.discount_percent}" name="discount_percent"/>					</td>					<td class="biz_top_align">&nbsp;&nbsp;in&nbsp;&nbsp;</td>					<td class="biz_top_align">						<select name="discount_type" id="discount_type"> 					  {foreach $amount_types as $amount_type}							<option value="{$amount_type@key}" {if $amount_type@key eq $tbl_discountsinfo.discount_type}selected="selected"{/if}>{$key} {$amount_type}</option>						{/foreach}						</select> 					</td>			</tr>		</table>		 		<div class="error" id="discount_percent_err"></div>	</div>	<!--	<div class="field-row">		<label for="discount_start_date">{$_lang.tbl_discounts.label.discount_start_date}</label>		<input type="text" name="discount_start_date" id="discount_start_date" value="{$tbl_discountsinfo.discount_start_date}"/>		<div class="error" id="discount_start_date_err"></div>	</div>	-->	<!--	<div class="field-row">		<label for="discount_end_date">{$_lang.tbl_discounts.label.discount_end_date}</label>		<input type="text" name="discount_end_date" id="discount_end_date" value="{$tbl_discountsinfo.discount_end_date}"/>		<div class="error" id="discount_end_date_err"></div>	</div>	-->	<div class="biz_center"><input type="hidden" id="action" name="action" value="{$smarty.const.ACTION_UPDATE}"/> <input  data-inline="true" data-icon="save"  type="submit" value="{$_lang.save_lbl}"/> <input data-inline="true" data-icon="delete" type="reset" value="{$_lang.cancel_lbl}"  onclick="window.location.href='{$page_url}'"/></div> </form><div id="tbl_discounts_view" class="description" style="{if $isUpdate eq 1}display:none;{/if}">	<table class="listTable">		<tr><th class="fieldItem">{$_lang.field_title}</th><th class="valueItem">{$_lang.value_title}</th></tr>		<tr><td class="fieldItem">{$_lang.tbl_discounts.label.discount_id}<i>:</i></td><td class="valueItem">{$tbl_discountsinfo.discount_id}</td></tr>		<tr><td class="fieldItem">{$_lang.tbl_discounts.label.discount_name}<i>:</i></td><td class="valueItem">{$tbl_discountsinfo.discount_name}</td></tr>		<tr><td class="fieldItem">{$_lang.tbl_discounts.label.discount_desc}<i>:</i></td><td class="valueItem">{$tbl_discountsinfo.discount_desc}</td></tr>		<tr><td class="fieldItem">{$_lang.tbl_discounts.label.discount_percent}<i>:</i></td><td class="valueItem">{$tbl_discountsinfo.discount_percent}</td></tr>	<!--		<tr><td class="fieldItem">{$_lang.tbl_discounts.label.discount_start_date}<i>:</i></td><td class="valueItem">{$tbl_discountsinfo.discount_start_date}</td></tr>	-->	<!--		<tr><td class="fieldItem">{$_lang.tbl_discounts.label.discount_end_date}<i>:</i></td><td class="valueItem">{$tbl_discountsinfo.discount_end_date}</td></tr>	-->	<tr><td class="fieldItem">{$_lang.tbl_discounts.label.isActive}<i>:</i></td><td class="valueItem">{if $tbl_discountsinfo.isActive eq 1}{$_lang.tbl_discounts.label.isActive_yes}{else}{$_lang.tbl_discounts.label.isActive_no}{/if}</td></tr>	</table>	<center>	{if $isUpdate eq 1}		{if $tbl_discountsinfo.isActive eq 1}		 	<input type="button" onclick="window.location.href='{$website}/user/tbl_discounts.php?action=deactivate&discount_id={$tbl_discountsinfo.discount_id}';" data-inline="true" data-icon="check" value="{$_lang.tbl_discounts.DEACTIVATE.BTN_LBL}"/> 		 {else}		 	<input type="button" onclick="window.location.href='{$website}/user/tbl_discounts.php?action=activate&discount_id={$tbl_discountsinfo.discount_id}';" data-inline="true" data-icon="check" value="{$_lang.tbl_discounts.ACTIVATE.BTN_LBL}"/> 		 {/if}	{/if}		<input data-inline="true" data-icon="edit" type="button" value="{$_lang.tbl_discounts.UPDATE.BTN_LBL}" onclick="$('#tbl_discounts_view').hide();$('#frmupdatetbl_discounts').show();"/>			<input type="button" value="{$_lang.cancel_lbl}" data-inline="true" data-icon="delete" onclick="window.location.href='{$page_url}'"/>			</center></div>{include file="tbl_discounts/js.tpl"}</div>{include file="footer.tpl"}