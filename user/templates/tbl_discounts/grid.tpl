{include file='header.tpl'}<div class="wrapper"><h1>{$_lang.tbl_discounts.listing_title}</h1>{if $error_msg}	<center>{$error_msg}</center>{/if}{if $result_found gt 0 && $tbl_discountslist}	<table class="biz_data_grid">		<tr>			<th class="{if $smarty.get.sort_on eq 'discount_name'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=discount_name&sort_by={$new_sort}">{$_lang.tbl_discounts.label.discount_name}</a></th>			<th class="{if $smarty.get.sort_on eq 'discount_desc'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=discount_desc&sort_by={$new_sort}">{$_lang.tbl_discounts.label.discount_desc}</a></th>			<th class="{if $smarty.get.sort_on eq 'discount_percent'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=discount_percent&sort_by={$new_sort}">{$_lang.tbl_discounts.label.discount_percent}</a></th>			<th class="action_header">Action</th>		</tr>		{foreach from=$tbl_discountslist item=tbl_discountsitem}		<tr class="{cycle values="odd,even"}">			<td><a href="{$page_url}?mode={$smarty.const.MODE_VIEW}&discount_id={$tbl_discountsitem.discount_id}">{$tbl_discountsitem.discount_name}</a></td>			<td>{$tbl_discountsitem.discount_desc}</td>			<td>{$tbl_discountsitem.discount_percent}</td>			<td><a href="{$page_url}?mode={$smarty.const.MODE_UPDATE}&discount_id={$tbl_discountsitem.discount_id}" class="editIcon"></a><a class="deleteIcon" href="#" onclick="deletetbl_discounts({$tbl_discountsitem.discount_id});"></a>{if $tbl_discountsitem.isActive eq 1}<a href="{$page_url}?action={$smarty.const.ACTION_DEACTIVATE}&discount_id={$tbl_discountsitem.discount_id}" class="deactiveIcon" title="{$_lang.tbl_discounts.DEACTIVATE.BTN_LBL}"></a>{else}<a href="{$page_url}?action={$smarty.const.ACTION_ACTIVATE}&discount_id={$tbl_discountsitem.discount_id}" class="activeIcon" title="{$_lang.tbl_discounts.ACTIVATE.BTN_LBL}"></a>{/if}</td>		</tr>	{/foreach}		<tfoot>			<tr>				<td colspan="6">					# {$result_found}&nbsp;&nbsp;&nbsp;{if $pagination neq ""}{$pagination}{/if}					<select onchange="changePage('{$navigationURL}',this.value,{$smarty.request.limit});">					{if $allPageCount gt 1}						{for $foo=1 to $allPageCount}							<option value="{$foo}" {if $foo eq $currentPage}selected="selected"{/if}>{$foo}</option>						{/for}					{else}						<option value="1" disabled="disabled">1</option>					{/if}					</select>				</td>			</tr>		</tfoot>	</table>{else}	<div class="error">{$_lang.tbl_discounts.no_record_found}</div>{/if}<center><input data-icon="add-item" data-inline="true" onclick="window.location.href='{$page_url}?mode={$smarty.const.MODE_CREATE}'" type="button" value="{$_lang.tbl_discounts.CREATE.BTN_LBL}"/></center></div>{include file="tbl_discounts/js.tpl"}{include file="footer.tpl"}