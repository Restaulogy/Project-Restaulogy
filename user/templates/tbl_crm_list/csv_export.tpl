{include file="header.tpl"}<div class="wrapper"><h1>CSV import</h1>{if $error_msg}	<center>{$error_msg}</center>{/if}<form action="{$website}/user/rewrad_point_list.php?mode=CSV_EXPORT" method="post" enctype="multipart/form-data">       <label >Source CSV file to import:</label>        <input type="file" name="file_source" id="file_source" class="edt" value="{$smarty.post.file_source}">              	<label> Use Header   <input type="checkbox" name="use_csv_header" id="use_csv_header" {if $smarty.post.use_csv_header} "checked" {/if} /></label>      	      	<label>Separate char:</label>         <input type="text" name="field_separate_char" id="field_separate_char" class="edt_30"  maxlength="1" value="{if $smarty.post.field_separate_char}{$smarty.post.field_separate_char|escape}{else},{/if}"/>                	<label>Enclose char:</label>      	<input type="text" name="field_enclose_char" id="field_enclose_char" class="edt_30"  maxlength="1" value='{if $smarty.post.field_enclose_char}{$smarty.post.field_enclose_char|escape}{else}"{/if}'/>      	      	<label>Escape char:</label>      	<input type="text" name="field_escape_char" id="field_escape_char" class="edt_30"  maxlength="1" value="{if $smarty.post.field_escape_char}{$smarty.post.field_escape_char|escape}{else}\{/if}"/>      	      	<label>Encoding:</label>          <select name="encoding" id="encoding" class="edt">          {foreach from=$arr_encodings key=charset item=description}                <option value="{$charset}" {if ($charset eq $smarty.post.field_escape_char )} selected="selected" {/if} >{$description}</option>          {/foreach}          </select>          <br>                	<input data-icon="search" data-inline="true" onclick="validate_me_now();" type="submit" value="Import it"/>  </form><br /></div>{literal}<script type="text/javascript">{/literal}{include file="footer.tpl"}