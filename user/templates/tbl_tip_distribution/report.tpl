{include file='header.tpl'}<div class="wrapper"><h1>{$_lang.tbl_tip_distribution.report_title}</h1>{if $error_msg}	<div class="biz_center">{$error_msg}</div>{/if}{include file="tbl_tip/tabs.tpl"}  <table class="biz_data_grid">		<tr>			<th>Period</th> 			<th style="text-align: right !important;">Amount</th> 		</tr> 	 {foreach $reportlist as $report}	 		<tr class="customers">				 <td colspan="2" class="biz_center no_hover">				 	<strong>{$report.title}</strong>				 </td>			</tr> 			{assign var=person_tot value="0"}			{foreach $report.period as $period} 				<tr class="{cycle values="odd,even"}"> 						<td class="no_hover">{$period@key}</td>						<td class="no_hover" style="text-align: right !important;">{$period|string_format:"%.2f"}{math assign=person_tot equation='x + y' x=$person_tot y=$period }</td> 				</tr>  		  {/foreach}			<tr>				<th>Total</th>				<th style="text-align:right !important;">{$person_tot|string_format:"%.2f"}</th>			</tr>	 {/foreach}	 </table></div>{include file="tbl_tip_distribution/js.tpl"}{include file="footer.tpl"}