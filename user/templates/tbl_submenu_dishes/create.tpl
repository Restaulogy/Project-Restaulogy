{include file="header.tpl"}<div class="wrapper">{*include file='menu_nav_bar.tpl'*}<h1>"{$sub_mnu_deatils.submnu_name}" - <small style="font-size:12px;"> {$_lang.tbl_submenu_dishes.create_title} </small> </h1>{if $error_msg}	<center>{$error_msg}</center>{/if}<form name="frmcreatetbl_submenu_dishes" id="frmcreatetbl_submenu_dishes" onsubmit="return validatetbl_submenu_dishes();" method="POST" action="{$page_url}">	<input type="hidden" name="sbmnu_dish_id" id="sbmnu_dish_id" value="0"/>	<div style="display:none;" class="error" id="sbmnu_dish_id_err"></div>	<div class="field-row" style="display:none;">		<label for="sbmnu_dish_submenu">{$_lang.tbl_submenu_dishes.label.sbmnu_dish_submenu}</label>		<input id="sbmnu_dish_submenu" name="sbmnu_dish_submenu" value="{$sub_mnu_deatils.submnu_id}" />		<div class="error" id="sbmnu_dish_submenu_err"></div>	</div>	<div class="field-row">		<label for="sbmnu_dish_dish">{$_lang.tbl_submenu_dishes.label.sbmnu_dish_dish}</label>		 		<select name="sbmnu_dish_dish" id="sbmnu_dish_dish" >		{assign var="option_caption" value=$_lang.tbl_submenu_dishes.label.select_sbmnu_dish_dish} 		{assign var="options" value=$dishList}		{assign var="option_selected" value=$smarty.post.sbmnu_dish_dish}		{include file="control/optionlist.tpl"} 		</select>				<div class="error" id="sbmnu_dish_dish_err"></div>	</div> 	<div id='div_submenu_price' class="{if $smarty.session.pst_menu_id eq $smarty.const.WINE_MENU_ID}biz_hidden{else}field-row{/if}">		<label for="sbmnu_dish_price">{$_lang.tbl_submenu_dishes.label.sbmnu_dish_price}</label>		<input type="text" name="sbmnu_dish_price" id="sbmnu_dish_price" value="{if $smarty.post.sbmnu_dish_price}{$smarty.post.sbmnu_dish_price}{else}0{/if}" style="width:60px;"/>		<div class="error" id="sbmnu_dish_price_err"></div>	</div>	<div class="field-row">		<label for="sbmnu_dish_display_order">{$_lang.tbl_submenu_dishes.label.sbmnu_dish_display_order}</label> 		<select name="sbmnu_dish_display_order" id="sbmnu_dish_display_order" style="width:50px;">        	{for $foo=1 to 100}                <option value="{$foo}" {if $smarty.post.sbmnu_dish_display_order eq $foo} selected="selected" {/if}> {$foo} </option>            {/for}        </select>		<div class="error" id="sbmnu_dish_display_order_err"></div>	</div>	<div class="field-row">		<label for="sbmnu_dish_desc">{$_lang.tbl_submenu_dishes.label.sbmnu_dish_desc}</label>		<textarea name="sbmnu_dish_desc" id="sbmnu_dish_desc">{$smarty.post.sbmnu_dish_desc}</textarea>		<div class="error" id="sbmnu_dish_desc_err"></div>	</div>	<!--	<div class="field-row">		<label for="sbmnu_dish_start_date">{$_lang.tbl_submenu_dishes.label.sbmnu_dish_start_date}</label>		<input type="text" name="sbmnu_dish_start_date" id="sbmnu_dish_start_date" value="{$smarty.post.sbmnu_dish_start_date}"/>		<div class="error" id="sbmnu_dish_start_date_err"></div>	</div>	-->	<!--	<div class="field-row">		<label for="sbmnu_dish_end_date">{$_lang.tbl_submenu_dishes.label.sbmnu_dish_end_date}</label>		<input type="text" name="sbmnu_dish_end_date" id="sbmnu_dish_end_date" value="{$smarty.post.sbmnu_dish_end_date}"/>		<div class="error" id="sbmnu_dish_end_date_err"></div>	</div>	-->	<input type="hidden" id="action" name="action" value="{$smarty.const.ACTION_CREATE}"/><input class="fleft" type="submit" value="{$_lang.save_lbl}"/> <input  class="fright" type="reset" value="{$_lang.cancel_lbl}" onclick="window.location.href='{$page_url}'"/></form>{include file="tbl_submenu_dishes/js.tpl"}</div>{include file="footer.tpl"}