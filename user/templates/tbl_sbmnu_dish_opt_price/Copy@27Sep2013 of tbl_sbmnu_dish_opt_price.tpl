{include file='header.tpl'}<div class="wrapper">{if $currSubMenuDish} <h1>"{$currSubMenuDish.sbmnu_dish_detail.dish_name}" - {$_lang.tbl_sbmnu_dish_opt_price.listing_title}</h1>{if $error_msg}	<center>{$error_msg}</center>{/if}	<h4>Dish Price: {$currSubMenuDish.sbmnu_dish_price}</h4>	<small>Note: If you have provided the dish price then option prices will be additional charges otherwise option prices will be considered as dish charges.</small>	{if $currSubMenuDish.optionsPrice}		<table class="listTable"> 			<tr><th class="bigListItem">{$_lang.tbl_sbmnu_dish_opt_price.listing_title}</th>			<th class="actionListItem"></th>			</tr>  		{assign var=currOptId value=0}		{foreach from=$currSubMenuDish.optionsPrice item=optItm}			 			{if $currOptId neq $optItm.dish_opt_id} 				<tr> 				 <th colspan="2">{$optItm.dish_opt_name}</th>				</tr>				{assign var=currOptId value=$optItm.dish_opt_id}			{/if} 		 	<tr>				{if $optItm.dish_opt_type eq "text"}				<td class="valueItem" colspan="2">					{$optItm.dish_opt_val_value}				</td>						{else}				<td class="valueItem">					<div class="fleft">{$optItm.dish_opt_val_value}</div>										<input class="fright" id="price_{$optItm.dish_opt_val_id}" value="{if $optItm.sbmdopt_pr_price}{$optItm.sbmdopt_pr_price}{else}0.00{/if}" style="width:75px;text-align: right;"/>										<input type="hidden" id="price_id_{$optItm.dish_opt_val_id}" value="{if $optItm.sbmdopt_pr_id}{$optItm.sbmdopt_pr_id}{else}0{/if}">  				</td> 				<td class="actionListItem"> 					<a href="#" class="saveIcon" onclick="updateDish_opt_price({$optItm.dish_opt_val_id});"></a>					<a href="#" class="renewIcon" onclick="updateDish_opt_price({$optItm.dish_opt_val_id},1);"></a>					{if $optItm.sbmdopt_pr_id}					<a href="#" class="deleteIcon" onclick="deletetbl_sbmnu_dish_opt_price({$optItm.sbmdopt_pr_id});"></a>					{/if}				</td>			</tr> 			{/if}		{/foreach}	</table>		 {else}	 <br><Br>	 <div class="error">{$_lang.tbl_dish_options.no_record_found}</div> 	  	{/if} <form name="frmtbl_sbmnu_dish_opt_price" id="frmtbl_sbmnu_dish_opt_price" onsubmit="return validatetbl_sbmnu_dish_opt_price();" method="POST" action="{$page_url}" style="display:none;">  	<input type="text" name="sbmdopt_pr_id" id="sbmdopt_pr_id" value="0"/>	<input type="text" name="sbmdopt_pr_sbmnu_dish" id="sbmdopt_pr_sbmnu_dish" value="{$smarty.session[$smarty.const.SES_SUB_MENU_DISH]}"/> 	<input type="text" name="sbmdopt_pr_option_value" id="sbmdopt_pr_option_value" value="{$tbl_sbmnu_dish_opt_priceinfo.sbmdopt_pr_option_value}"/> 	 	<input type="text" id="action" name="action" value="CREATE"/> 	<input type="text" name="sbmdopt_pr_price" id="sbmdopt_pr_price" value="0.00"/> 	<input id="btn_submit_tbl_sbmnu_dish_opt_price" type="submit" value="{$_lang.save_lbl}"/>  </form> {literal}<script type="text/javascript">	function updateDish_opt_price(opt_val_id, isReset){		/*alert(elemById("price_" + opt_val_id).value);		alert(elemById("price_id_" + opt_val_id).value); */				 if(IsNumeric(elemById("price_" + opt_val_id).value)){ 			elemById("sbmdopt_pr_option_value").value = opt_val_id; 					 if(isReset){		 	elemById("sbmdopt_pr_price").value = "0.00";		 }else{		 	elemById("sbmdopt_pr_price").value = elemById("price_" + opt_val_id).value;		 }			elemById("sbmdopt_pr_id").value = elemById("price_id_" + opt_val_id).value;			if(is_gt_zero_num(elemById("sbmdopt_pr_id").value)){				elemById("action").value = "UPDATE";			}else{				elemById("action").value = "CREATE";			}						$("#btn_submit_tbl_sbmnu_dish_opt_price").trigger('click');		}else{			alert("Please Enter Proper Price");			return false;		}		return true;		}</script>	{/literal}	<br/>	<div class="field-row clearfix biz_center">	  {jqmbutton  icon="configuration" value="Manage Dish Options" onclick="window.open('{$website}/user/tbl_dish_options.php?dish_opt_dish_id={$currSubMenuDish.sbmnu_dish_detail.dish_id}');"} 		{jqmbutton  icon="configuration" value="Manage Submenu Options" onclick="window.open('{$website}/user/tbl_dish_options.php?dish_opt_submenu={$currSubMenuDish.sbmnu_dish_submenu}');"}	</div>		{/if} </div>{include file="tbl_sbmnu_dish_opt_price/js.tpl"}{include file="footer.tpl"}