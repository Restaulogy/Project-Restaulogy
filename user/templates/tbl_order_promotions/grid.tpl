{include file='header.tpl'}<div class="wrapper"><h1>{$_lang.tbl_order_promotions.listing_title}</h1>{if $error_msg}	<center>{$error_msg}</center>{/if}{if $result_found gt 0 && $tbl_order_promotionslist}	<table class="biz_data_grid">		<tr>			<th class="{if $smarty.get.sort_on eq 'ordprom_order'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=ordprom_order&sort_by={$new_sort}">{$_lang.tbl_order_promotions.label.ordprom_order}</a></th>			<th class="{if $smarty.get.sort_on eq 'ordprom_order_sbmnu_dish'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=ordprom_order_sbmnu_dish&sort_by={$new_sort}">{$_lang.tbl_order_promotions.label.ordprom_order_sbmnu_dish}</a></th>			<th class="{if $smarty.get.sort_on eq 'ordprom_promotion'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=ordprom_promotion&sort_by={$new_sort}">{$_lang.tbl_order_promotions.label.ordprom_promotion}</a></th>			<th class="{if $smarty.get.sort_on eq 'ordprom_discount'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=ordprom_discount&sort_by={$new_sort}">{$_lang.tbl_order_promotions.label.ordprom_discount}</a></th>			<th class="action_header">Action</th>		</tr>		{foreach from=$tbl_order_promotionslist item=tbl_order_promotionsitem}		<tr class="{cycle values="odd,even"}">			<td><a href="{$page_url}?mode={$smarty.const.MODE_VIEW}&ordprom_id={$tbl_order_promotionsitem.ordprom_id}">{$tbl_order_promotionsitem.ordprom_order}</a></td>			<td>{$tbl_order_promotionsitem.ordprom_order_sbmnu_dish}</td>			<td>{$tbl_order_promotionsitem.ordprom_promotion}</td>			<td>{$tbl_order_promotionsitem.ordprom_discount}</td>			<td><a href="{$page_url}?mode={$smarty.const.MODE_UPDATE}&ordprom_id={$tbl_order_promotionsitem.ordprom_id}" class="editIcon"></a><a class="deleteIcon" href="#" onclick="deletetbl_order_promotions({$tbl_order_promotionsitem.ordprom_id});"></a>{if $tbl_order_promotionsitem.isActive eq 1}<a href="{$page_url}?action={$smarty.const.ACTION_DEACTIVATE}&ordprom_id={$tbl_order_promotionsitem.ordprom_id}" class="deactiveIcon" title="{$_lang.tbl_order_promotions.DEACTIVATE.BTN_LBL}"></a>{else}<a href="{$page_url}?action={$smarty.const.ACTION_ACTIVATE}&ordprom_id={$tbl_order_promotionsitem.ordprom_id}" class="activeIcon" title="{$_lang.tbl_order_promotions.ACTIVATE.BTN_LBL}"></a>{/if}</td>		</tr>	{/foreach}		<tfoot>			<tr>				<td colspan="7">					# {$result_found}&nbsp;&nbsp;&nbsp;{if $pagination neq ""}{$pagination}{/if}					<select onchange="changePage('{$navigationURL}',this.value,{$smarty.request.limit});">					{if $allPageCount gt 1}						{for $foo=1 to $allPageCount}							<option value="{$foo}" {if $foo eq $currentPage}selected="selected"{/if}>{$foo}</option>						{/for}					{else}						<option value="1" disabled="disabled">1</option>					{/if}					</select>				</td>			</tr>		</tfoot>	</table>{else}	<div class="error">{$_lang.tbl_order_promotions.no_record_found}</div>{/if}<center><input data-icon="add-item" data-inline="true" onclick="window.location.href='{$page_url}?mode={$smarty.const.MODE_CREATE}'" type="button" value="{$_lang.tbl_order_promotions.CREATE.BTN_LBL}"/></center></div>{include file="tbl_order_promotions/js.tpl"}{include file="footer.tpl"}