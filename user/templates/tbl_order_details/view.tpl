{include file="header.tpl"}<div class="wrapper"><h1>{$_lang.tbl_order_details.title}</h1>{if $error_msg}	<center>{$error_msg}</center>{/if}<form name="frmupdatetbl_order_details" id="frmupdatetbl_order_details" onsubmit="return validatetbl_order_details();" method="POST" action="{$page_url}" style="{if $isUpdate eq 1}{else}display:none;{/if}">	<input type="hidden" name="ord_dtl_id" id="ord_dtl_id" value="{$tbl_order_detailsinfo.ord_dtl_id}"/>	<div style="display:none;" class="error" id="ord_dtl_id_err"></div>	<div class="field-row">		<label for="ord_dtl_order_id">{$_lang.tbl_order_details.label.ord_dtl_order_id}</label>		<input type="text" name="ord_dtl_order_id" id="ord_dtl_order_id" value="{$tbl_order_detailsinfo.ord_dtl_order_id}"/>		<div class="error" id="ord_dtl_order_id_err"></div>	</div>	<div class="field-row">		<label for="ord_dtl_sbmenu_dish_id">{$_lang.tbl_order_details.label.ord_dtl_sbmenu_dish_id}</label>		<input type="text" name="ord_dtl_sbmenu_dish_id" id="ord_dtl_sbmenu_dish_id" value="{$tbl_order_detailsinfo.ord_dtl_sbmenu_dish_id}"/>		<div class="error" id="ord_dtl_sbmenu_dish_id_err"></div>	</div>	<div class="field-row">		<label for="ord_dtl_quantity">{$_lang.tbl_order_details.label.ord_dtl_quantity}</label>		<input type="text" name="ord_dtl_quantity" id="ord_dtl_quantity" value="{$tbl_order_detailsinfo.ord_dtl_quantity}"/>		<div class="error" id="ord_dtl_quantity_err"></div>	</div>	<div class="field-row">		<label for="ord_dtl_price">{$_lang.tbl_order_details.label.ord_dtl_price}</label>		<input type="text" name="ord_dtl_price" id="ord_dtl_price" value="{$tbl_order_detailsinfo.ord_dtl_price}"/>		<div class="error" id="ord_dtl_price_err"></div>	</div>	<input type="hidden" id="action" name="action" value="{$smarty.const.ACTION_UPDATE}"/> <input class="fleft" type="submit" value="{$_lang.save_lbl}"/> <input class="fright" type="reset" onclick="$('#tbl_order_details_view').show();$('#frmupdatetbl_order_details').hide();" value="{$_lang.cancel_lbl}"/></form><div id="tbl_order_details_view" class="description" style="{if $isUpdate eq 1}display:none;{/if}">	<table class="listTable">		<tr><th class="fieldItem">{$_lang.field_title}</th><th class="valueItem">{$_lang.value_title}</th></tr>		<tr><td class="fieldItem">{$_lang.tbl_order_details.label.ord_dtl_id}<i>:</i></td><td class="valueItem">{$tbl_order_detailsinfo.ord_dtl_id}</td></tr>		<tr><td class="fieldItem">{$_lang.tbl_order_details.label.ord_dtl_order_id}<i>:</i></td><td class="valueItem">{$tbl_order_detailsinfo.ord_dtl_order_id}</td></tr>		<tr><td class="fieldItem">{$_lang.tbl_order_details.label.ord_dtl_sbmenu_dish_id}<i>:</i></td><td class="valueItem">{$tbl_order_detailsinfo.ord_dtl_sbmenu_dish_id}</td></tr>		<tr><td class="fieldItem">{$_lang.tbl_order_details.label.ord_dtl_quantity}<i>:</i></td><td class="valueItem">{$tbl_order_detailsinfo.ord_dtl_quantity}</td></tr>		<tr><td class="fieldItem">{$_lang.tbl_order_details.label.ord_dtl_price}<i>:</i></td><td class="valueItem">{$tbl_order_detailsinfo.ord_dtl_price}</td></tr>	<tr><td class="fieldItem">{$_lang.tbl_order_details.label.isActive}<i>:</i></td><td class="valueItem">{if $tbl_order_detailsinfo.isActive eq 1}{$_lang.tbl_order_details.label.isActive_yes}{else}{$_lang.tbl_order_details.label.isActive_no}{/if}</td></tr>	</table>	<input class="fleft" type="button" value="{$_lang.tbl_order_details.UPDATE.BTN_LBL}" onclick="$('#tbl_order_details_view').hide();$('#frmupdatetbl_order_details').show();"/><input type="button" value="{$_lang.cancel_lbl}" class="fright"  onclick="window.location.href='{$page_url}'"/></div>{include file="tbl_order_details/js.tpl"}</div>{include file="footer.tpl"}