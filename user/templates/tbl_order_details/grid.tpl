{include file='header.tpl'}<div class="wrapper"><h1>{$_lang.tbl_order_details.listing_title}</h1>{if $error_msg}	<center>{$error_msg}</center>{/if}{if $result_found gt 0 && $tbl_order_detailslist}	<table class="biz_data_grid">		<tr>			<th class="{if $smarty.get.sort_on eq 'ord_dtl_order_id'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=ord_dtl_order_id&sort_by={$new_sort}">{$_lang.tbl_order_details.label.ord_dtl_order_id}</a></th>			<th class="{if $smarty.get.sort_on eq 'ord_dtl_sbmenu_dish_id'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=ord_dtl_sbmenu_dish_id&sort_by={$new_sort}">{$_lang.tbl_order_details.label.ord_dtl_sbmenu_dish_id}</a></th>			<th class="{if $smarty.get.sort_on eq 'ord_dtl_quantity'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=ord_dtl_quantity&sort_by={$new_sort}">{$_lang.tbl_order_details.label.ord_dtl_quantity}</a></th>			<th class="{if $smarty.get.sort_on eq 'ord_dtl_price'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=ord_dtl_price&sort_by={$new_sort}">{$_lang.tbl_order_details.label.ord_dtl_price}</a></th>			<th class="action_header">Action</th>		</tr>		{foreach from=$tbl_order_detailslist item=tbl_order_detailsitem}		<tr class="{cycle values="odd,even"}">			<td><a href="{$page_url}?mode={$smarty.const.MODE_VIEW}&ord_dtl_id={$tbl_order_detailsitem.ord_dtl_id}">{$tbl_order_detailsitem.ord_dtl_order_id}</a></td>			<td>{$tbl_order_detailsitem.ord_dtl_sbmenu_dish_id}</td>			<td>{$tbl_order_detailsitem.ord_dtl_quantity}</td>			<td>{$tbl_order_detailsitem.ord_dtl_price}</td>			<td><a href="{$page_url}?mode={$smarty.const.MODE_UPDATE}&ord_dtl_id={$tbl_order_detailsitem.ord_dtl_id}" class="editIcon"></a><a class="deleteIcon" href="#" onclick="deletetbl_order_details({$tbl_order_detailsitem.ord_dtl_id});"></a>{if $tbl_order_detailsitem.isActive eq 1}<a href="{$page_url}?action={$smarty.const.ACTION_DEACTIVATE}&ord_dtl_id={$tbl_order_detailsitem.ord_dtl_id}" class="deactiveIcon" title="{$_lang.tbl_order_details.DEACTIVATE.BTN_LBL}"></a>{else}<a href="{$page_url}?action={$smarty.const.ACTION_ACTIVATE}&ord_dtl_id={$tbl_order_detailsitem.ord_dtl_id}" class="activeIcon" title="{$_lang.tbl_order_details.ACTIVATE.BTN_LBL}"></a>{/if}</td>		</tr>	{/foreach}		<tfoot>			<tr>				<td colspan="5">					# {$result_found}&nbsp;&nbsp;&nbsp;{if $pagination neq ""}{$pagination}{/if}					<select onchange="changePage('{$navigationURL}',this.value,{$smarty.request.limit});">					{if $allPageCount gt 1}						{for $foo=1 to $allPageCount}							<option value="{$foo}" {if $foo eq $currentPage}selected="selected"{/if}>{$foo}</option>						{/for}					{else}						<option value="1" disabled="disabled">1</option>					{/if}					</select>				</td>			</tr>		</tfoot>	</table>{else}	<div class="error">{$_lang.tbl_order_details.no_record_found}</div>{/if}<input onclick="window.location.href='{$page_url}?mode={$smarty.const.MODE_CREATE}'" type="button" value="{$_lang.tbl_order_details.CREATE.BTN_LBL}"/></div>{include file="tbl_order_details/js.tpl"}{include file="footer.tpl"}