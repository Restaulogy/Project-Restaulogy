{include file='header.tpl'}<div class="wrapper"><h1>{$_lang.tbl_order_details.listing_title}</h1>{if $error_msg}	<center>{$error_msg}</center>{/if}{if $result_found gt 0 && $tbl_order_detailslist}	<table class="listTable">		<tr><th class="bigListItem">{$_lang.tbl_order_details.title}</th>		<th class="actionListItem"></th></tr>		{foreach from=$tbl_order_detailslist item=tbl_order_detailsitem}			<tr>				<td class="bigListItem"><a href="{$page_url}?mode={$smarty.const.MODE_VIEW}&ord_dtl_id={$tbl_order_detailsitem.ord_dtl_id}">{$tbl_order_detailsitem.ord_dtl_order_id}</a></td>				<td class="actionListItem"><a href="{$page_url}?mode={$smarty.const.MODE_UPDATE}&ord_dtl_id={$tbl_order_detailsitem.ord_dtl_id}" class="editIcon"></a><a class="deleteIcon" href="#" onclick="deletetbl_order_details({$tbl_order_detailsitem.ord_dtl_id});"></a>{if $tbl_order_detailsitem.isActive eq 1}<a href="{$page_url}?action={$smarty.const.ACTION_DEACTIVATE}&ord_dtl_id={$tbl_order_detailsitem.ord_dtl_id}" class="deactiveIcon" title="{$_lang.tbl_order_details.DEACTIVATE.BTN_LBL}"></a>{else}<a href="{$page_url}?action={$smarty.const.ACTION_ACTIVATE}&ord_dtl_id={$tbl_order_detailsitem.ord_dtl_id}" class="activeIcon" title="{$_lang.tbl_order_details.ACTIVATE.BTN_LBL}"></a>{/if}</td>			</tr>	{/foreach}	</table>{else}	<div class="error">{$_lang.tbl_order_details.no_record_found}</div>{/if}{if $pagination}	<center>{$pagination}</center>{/if}<input onclick="window.location.href='{$page_url}?mode={$smarty.const.MODE_CREATE}'" type="button" value="{$_lang.tbl_order_details.CREATE.BTN_LBL}"/></div>{include file="tbl_order_details/js.tpl"}{include file="footer.tpl"}