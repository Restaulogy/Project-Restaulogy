{include file="header.tpl"}<h1>{$_lang.member_role.title}</h1><div class="wrapper">{if $error_msg}	<center>{$error_msg}</center>{/if}<form name="frmupdatemember_role" id="frmupdatemember_role" onsubmit="return validatemember_role();" method="POST" action="{$page_url}" style="{if $isUpdate eq 1}{else}display:none;{/if}">	<div class='biz_hidden'>	<label for="member_role_id">{$_lang.member_role.label.member_role_id}</label>	<input type="text" name="member_role_id" id="member_role_id" value="{$member_roleinfo.member_role_id}"/>	<div class="error" id="member_role_id_err"></div>	</div>	<label for="member_role_name">{$_lang.member_role.label.member_role_name}</label>	<input type="text" name="member_role_name" id="member_role_name" value="{$member_roleinfo.member_role_name}"/>	<div class="error" id="member_role_name_err"></div>	<div class='biz_hidden'>	<label for="member_role_start_date">{$_lang.member_role.label.member_role_start_date}</label>	<input type="text" name="member_role_start_date" id="member_role_start_date" value="{$member_roleinfo.member_role_start_date}"/>	<div class="error" id="member_role_start_date_err"></div>	<label for="member_role_end_date">{$_lang.member_role.label.member_role_end_date}</label>	<input type="text" name="member_role_end_date" id="member_role_end_date" value="{$member_roleinfo.member_role_end_date}"/>	<div class="error" id="member_role_end_date_err"></div>		</div>		{if $member_roleinfo.isActive eq 1}		<input type="button" value="{$_lang.member_role.DEACTIVATE.BTN_LBL}" onclick="location.href='{$page_url}?action=deactivate&member_role_id={$member_roleinfo.member_role_id}';" data-inline="true" data-icon="check" title="{$_lang.member_role.DEACTIVATE.BTN_LBL}" />	{else}		<input type="button" value="{$_lang.member_role.ACTIVATE.BTN_LBL}" onclick="location.href='{$page_url}?action=activate&member_role_id={$member_roleinfo.member_role_id}';" data-inline="true" data-icon="check" title="{$_lang.member_role.ACTIVATE.BTN_LBL}" />	{/if}	<input type="hidden" name="action" value="update"/> 	<input data-inline="true" data-icon="save"  type="submit" value="{$_lang.save_lbl}"/> 	<input type="button" value="{$_lang.cancel_lbl}" data-inline="true" data-icon="delete" onclick="window.location.href='{$page_url}'"/>	 	</form><div id="member_role_view" class="description" style="{if $isUpdate eq 1}display:none;{/if}">	<p>{$_lang.member_role.label.member_role_id}:<b>{$member_roleinfo.member_role_id}</b></p>	<p>{$_lang.member_role.label.member_role_name}:<b>{$member_roleinfo.member_role_name}</b></p>	<p>{$_lang.member_role.label.member_role_start_date}:<b>{$member_roleinfo.member_role_start_date}</b></p>	<p>{$_lang.member_role.label.member_role_end_date}:<b>{$member_roleinfo.member_role_end_date}</b></p>	<input class="fleft" type="button" value="{$_lang.member_role.UPDATE.BTN_LBL}" onclick="$('#member_role_view').hide();$('#frmupdatemember_role').show();"/><input type="button" value="{$_lang.cancel_lbl}" class="fright"  onclick="window.location.href='{$page_url}'"/></div>{include file="js_member_role.tpl"}</div>{include file="footer.tpl"}