{include file='header.tpl'}<div class="wrapper"><h1>{$_lang.tbl_rest_groups.listing_title}</h1>{if $error_msg}	<center>{$error_msg}</center>{/if}{if $result_found gt 0 && $tbl_rest_groupslist}	<table class="biz_data_grid">		<tr>			<th class="{if $smarty.get.sort_on eq 'rstgrp_group'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=rstgrp_group&sort_by={$new_sort}">{$_lang.tbl_rest_groups.label.rstgrp_group}</a></th>			<th class="{if $smarty.get.sort_on eq 'rstgrp_desc'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=rstgrp_desc&sort_by={$new_sort}">{$_lang.tbl_rest_groups.label.rstgrp_desc}</a></th>			<th class="action_header">Action</th>		</tr>		{foreach from=$tbl_rest_groupslist item=tbl_rest_groupsitem}		<tr class="{cycle values="odd,even"}">			<td><a href="{$page_url}?mode={$smarty.const.MODE_VIEW}&rstgrp_id={$tbl_rest_groupsitem.rstgrp_id}">{$tbl_rest_groupsitem.rstgrp_group}</a></td>			<td>{$tbl_rest_groupsitem.rstgrp_desc}</td>			<td><a href="{$page_url}?mode={$smarty.const.MODE_UPDATE}&rstgrp_id={$tbl_rest_groupsitem.rstgrp_id}" class="editIcon"></a><a class="deleteIcon" href="#" onclick="deletetbl_rest_groups({$tbl_rest_groupsitem.rstgrp_id});"></a>{if $tbl_rest_groupsitem.isActive eq 1}<a href="{$page_url}?action={$smarty.const.ACTION_DEACTIVATE}&rstgrp_id={$tbl_rest_groupsitem.rstgrp_id}" class="deactiveIcon" title="{$_lang.tbl_rest_groups.DEACTIVATE.BTN_LBL}"></a>{else}<a href="{$page_url}?action={$smarty.const.ACTION_ACTIVATE}&rstgrp_id={$tbl_rest_groupsitem.rstgrp_id}" class="activeIcon" title="{$_lang.tbl_rest_groups.ACTIVATE.BTN_LBL}"></a>{/if}</td>		</tr>	{/foreach}		<tfoot>			<tr>				<td colspan="5">					# {$result_found}&nbsp;&nbsp;&nbsp;{if $pagination neq ""}{$pagination}{/if}					<select onchange="changePage('{$navigationURL}',this.value,{$smarty.request.limit});">					{if $allPageCount gt 1}						{for $foo=1 to $allPageCount}							<option value="{$foo}" {if $foo eq $currentPage}selected="selected"{/if}>{$foo}</option>						{/for}					{else}						<option value="1" disabled="disabled">1</option>					{/if}					</select>				</td>			</tr>		</tfoot>	</table>{else}	<div class="error">{$_lang.tbl_rest_groups.no_record_found}</div>{/if}<center><input data-icon="add-item" data-inline="true" onclick="window.location.href='{$page_url}?mode={$smarty.const.MODE_CREATE}'" type="button" value="{$_lang.tbl_rest_groups.CREATE.BTN_LBL}"/></center></div>{include file="tbl_rest_groups/js.tpl"}{include file="footer.tpl"}