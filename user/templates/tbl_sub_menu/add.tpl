<div data-role="popup" id="popupAddSubMenu" data-overlay-theme="a" data-theme="c" data-dismissible="false" style="width:300px;" class="ui-corner-all">    <div data-role="header" data-theme="a" class="ui-corner-top">        <h4>{$_lang.tbl_sub_menu.create_title}</h4>		<a href="#" data-rel="back" data-role="button" data-icon="delete" data-iconpos="notext" class="ui-btn-right">Close</a>    </div>    <div data-role="content" class="ui-corner-bottom ui-content" style="padding:5px;"> <form name="frmcreatetbl_sub_menu" id="frmcreatetbl_sub_menu" onsubmit="return validatetbl_sub_menu();" method="POST" action="{$page_url}" enctype="multipart/form-data">	<input type="hidden" name="submnu_id" id="submnu_id" value="0"/>	<div style="display:none;" class="error" id="submnu_id_err"></div>    <div class="field-row">		<label for="submnu_image">{$_lang.tbl_sub_menu.label.submnu_image}</label>		<input type="file" name="submnu_image" id="submnu_image" value="{$smarty.post.submnu_image}"/>		<div class="error" id="submnu_image_err"></div>	</div>		<div class="field-row">		<label for="submnu_name">{$_lang.tbl_sub_menu.label.submnu_name}</label>		<input type="text" name="submnu_name" id="submnu_name" value="{$smarty.post.submnu_name}"/>		<div class="error" id="submnu_name_err"></div>	</div>	<div class="field-row" style="display:none;">		<label for="submnu_menu">{$_lang.tbl_sub_menu.label.submnu_menu}</label>		 		<select name="submnu_menu" id="submnu_menu">		{assign var="option_caption" value=$_lang.tbl_sub_menu.label.select_submnu_menu} 		{assign var="options" value=$menuList}		{assign var="option_selected" value=$smarty.request.submnu_menu}		{include file="control/optionlist.tpl"} 		</select>		<div class="error" id="submnu_menu_err"></div>	</div>	<div class="field-row">		<label for="submnu_description">{$_lang.tbl_sub_menu.label.submnu_description}</label>		<textarea name="submnu_description" id="submnu_description" rows="2">{$smarty.post.submnu_description}</textarea>		<div class="error" id="submnu_description_err"></div>	</div>	<div class="field-row">		<label for="submnu_spl_note">{$_lang.tbl_sub_menu.label.submnu_spl_note}</label> 		<textarea name="submnu_spl_note" id="submnu_spl_note" >{$smarty.post.submnu_spl_note}</textarea>		<div class="error" id="submnu_spl_note_err"></div>	</div>		<div class="field-row">		<label for="submnu_display_order">{$_lang.tbl_sub_menu.label.submnu_display_order}</label>        	<select name="submnu_display_order" id="submnu_display_order" data-mini="true" >	        	{for $foo=1 to 100}	                <option value="{$foo}" {if $mx_disply_ord eq $foo} selected="selected" {/if}> {$foo} </option>	            {/for}        	</select>        <div class="error" id="submnu_display_order_err"></div>	</div>	<!--	<div class="field-row">		<label for="submnu_start_date">{$_lang.tbl_sub_menu.label.submnu_start_date}</label>		<input type="text" name="submnu_start_date" id="submnu_start_date" value="{$smarty.post.submnu_start_date}"/>		<div class="error" id="submnu_start_date_err"></div>	</div>	-->	<!--	<div class="field-row">		<label for="submnu_end_date">{$_lang.tbl_sub_menu.label.submnu_end_date}</label>		<input type="text" name="submnu_end_date" id="submnu_end_date" value="{$smarty.post.submnu_end_date}"/>		<div class="error" id="submnu_end_date_err"></div>	</div>	-->	<div class="field-row clearfix">	<center>	<input type="hidden" id="action" name="action" value="{$smarty.const.ACTION_CREATE}"/><input  type="submit" data-icon="save" data-inline="true" value="{$_lang.save_lbl}"/> <input  data-icon="delete" data-inline="true"  type="reset" value="{$_lang.cancel_lbl}" onclick="$('#popupAddSubMenu').popup('close');"/>	</center>	</div>	</form></div></div> 