{include file="header.tpl"}<div class="wrapper">{include file='menu_nav_bar.tpl'}<h1>"{$mnu_deatils.menu_name}" - <small style="font-size:12px;">{$_lang.tbl_sub_menu.title}</small></h1>{if $error_msg}	<center>{$error_msg}</center>{/if}<form name="frmupdatetbl_sub_menu" id="frmupdatetbl_sub_menu" onsubmit="return validatetbl_sub_menu();" method="POST" action="{$page_url}" style="{if $isUpdate eq 1}{else}display:none;{/if}">	<input type="hidden" name="submnu_id" id="submnu_id" value="{$tbl_sub_menuinfo.submnu_id}"/>	<div style="display:none;" class="error" id="submnu_id_err"></div>	<div class="field-row">		<label for="submnu_name">{$_lang.tbl_sub_menu.label.submnu_name}</label>		<input type="text" name="submnu_name" id="submnu_name" value="{$tbl_sub_menuinfo.submnu_name}"/>		<div class="error" id="submnu_name_err"></div>	</div>	<div class="field-row" style="display:none;">		<label for="submnu_menu">{$_lang.tbl_sub_menu.label.submnu_menu}</label>		 		<select name="submnu_menu" id="submnu_menu">		{assign var="option_caption" value=$_lang.tbl_sub_menu.label.select_submnu_menu} 		{assign var="options" value=$menuList}		{assign var="option_selected" value=$tbl_sub_menuinfo.submnu_menu}		{include file="control/optionlist.tpl"} 		</select>		<div class="error" id="submnu_menu_err"></div>	</div>	<div class="field-row">		<label for="submnu_description">{$_lang.tbl_sub_menu.label.submnu_description}</label>		<textarea name="submnu_description" id="submnu_description">{$tbl_sub_menuinfo.submnu_description}</textarea>		<div class="error" id="submnu_description_err"></div>	</div>	<div class="field-row">		<label for="submnu_spl_note">{$_lang.tbl_sub_menu.label.submnu_spl_note}</label> 		<textarea name="submnu_spl_note" id="submnu_spl_note">{$tbl_sub_menuinfo.submnu_spl_note}</textarea>		<div class="error" id="submnu_spl_note_err"></div>	</div>	<!--	<div class="field-row">		<label for="submnu_start_date">{$_lang.tbl_sub_menu.label.submnu_start_date}</label>		<input type="text" name="submnu_start_date" id="submnu_start_date" value="{$tbl_sub_menuinfo.submnu_start_date}"/>		<div class="error" id="submnu_start_date_err"></div>	</div>	-->	<!--	<div class="field-row">		<label for="submnu_end_date">{$_lang.tbl_sub_menu.label.submnu_end_date}</label>		<input type="text" name="submnu_end_date" id="submnu_end_date" value="{$tbl_sub_menuinfo.submnu_end_date}"/>		<div class="error" id="submnu_end_date_err"></div>	</div>	-->	<input type="hidden" id="action" name="action" value="{$smarty.const.ACTION_UPDATE}"/> <input class="fleft" type="submit" value="{$_lang.save_lbl}"/> <input class="fright" type="reset" onclick="$('#tbl_sub_menu_view').show();$('#frmupdatetbl_sub_menu').hide();" value="{$_lang.cancel_lbl}"/></form><div id="tbl_sub_menu_view" class="description" style="{if $isUpdate eq 1}display:none;{/if}">	<table class="listTable">		<tr><th class="fieldItem">{$_lang.field_title}</th><th class="valueItem">{$_lang.value_title}</th></tr>		<!--<tr><td class="fieldItem">{$_lang.tbl_sub_menu.label.submnu_id}<i>:</i></td><td class="valueItem">{$tbl_sub_menuinfo.submnu_id}</td></tr> -->		<tr><td class="fieldItem">{$_lang.tbl_sub_menu.label.submnu_name}<i>:</i></td><td class="valueItem">{$tbl_sub_menuinfo.submnu_name}</td></tr>		<!-- <tr><td class="fieldItem">{$_lang.tbl_sub_menu.label.submnu_menu}<i>:</i></td><td class="valueItem">{$tbl_sub_menuinfo.submnu_menu}</td></tr>-->		<tr><td class="fieldItem">{$_lang.tbl_sub_menu.label.submnu_description}<i>:</i></td><td class="valueItem">{$tbl_sub_menuinfo.submnu_description}</td></tr>		<tr><td class="fieldItem">{$_lang.tbl_sub_menu.label.submnu_spl_note}<i>:</i></td><td class="valueItem">{$tbl_sub_menuinfo.submnu_spl_note}</td></tr>	<!--		<tr><td class="fieldItem">{$_lang.tbl_sub_menu.label.submnu_start_date}<i>:</i></td><td class="valueItem">{$tbl_sub_menuinfo.submnu_start_date}</td></tr>	-->	<!--		<tr><td class="fieldItem">{$_lang.tbl_sub_menu.label.submnu_end_date}<i>:</i></td><td class="valueItem">{$tbl_sub_menuinfo.submnu_end_date}</td></tr>	-->	<tr><td class="fieldItem">{$_lang.tbl_sub_menu.label.isActive}<i>:</i></td><td class="valueItem">{if $tbl_sub_menuinfo.isActive eq 1}{$_lang.tbl_sub_menu.label.isActive_yes}{else}{$_lang.tbl_sub_menu.label.isActive_no}{/if}</td></tr>	</table>	<input class="fleft" type="button" value="{$_lang.tbl_sub_menu.UPDATE.BTN_LBL}" onclick="$('#tbl_sub_menu_view').hide();$('#frmupdatetbl_sub_menu').show();"/><input type="button" value="{$_lang.cancel_lbl}" class="fright"  onclick="window.location.href='{$page_url}'"/></div>{include file="tbl_sub_menu/js.tpl"}</div>{include file="footer.tpl"}