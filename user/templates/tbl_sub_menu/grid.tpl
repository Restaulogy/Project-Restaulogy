{include file='header.tpl'}<div class="wrapper"><h1>{$_lang.tbl_sub_menu.listing_title}</h1>{if $error_msg}	<center>{$error_msg}</center>{/if}{if $result_found gt 0 && $tbl_sub_menulist}	<table class="biz_data_grid">		<tr>			<th class="{if $smarty.get.sort_on eq 'submnu_name'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=submnu_name&sort_by={$new_sort}">{$_lang.tbl_sub_menu.label.submnu_name}</a></th>			<th class="{if $smarty.get.sort_on eq 'submnu_menu'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=submnu_menu&sort_by={$new_sort}">{$_lang.tbl_sub_menu.label.submnu_menu}</a></th>			<th class="{if $smarty.get.sort_on eq 'submnu_description'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=submnu_description&sort_by={$new_sort}">{$_lang.tbl_sub_menu.label.submnu_description}</a></th>			<th class="{if $smarty.get.sort_on eq 'submnu_spl_note'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=submnu_spl_note&sort_by={$new_sort}">{$_lang.tbl_sub_menu.label.submnu_spl_note}</a></th>			<th class="action_header">Action</th>		</tr>		{foreach from=$tbl_sub_menulist item=tbl_sub_menuitem}		<tr class="{cycle values="odd,even"}">			<td><a href="{$page_url}?mode={$smarty.const.MODE_VIEW}&submnu_id={$tbl_sub_menuitem.submnu_id}">{$tbl_sub_menuitem.submnu_name}</a></td>			<td>{$tbl_sub_menuitem.submnu_menu}</td>			<td>{$tbl_sub_menuitem.submnu_description}</td>			<td>{$tbl_sub_menuitem.submnu_spl_note}</td>			<td><a href="{$page_url}?mode={$smarty.const.MODE_UPDATE}&submnu_id={$tbl_sub_menuitem.submnu_id}" class="editIcon"></a><a class="deleteIcon" href="#" onclick="deletetbl_sub_menu({$tbl_sub_menuitem.submnu_id});"></a>{if $tbl_sub_menuitem.isActive eq 1}<a href="{$page_url}?action={$smarty.const.ACTION_DEACTIVATE}&submnu_id={$tbl_sub_menuitem.submnu_id}" class="deactiveIcon" title="{$_lang.tbl_sub_menu.DEACTIVATE.BTN_LBL}"></a>{else}<a href="{$page_url}?action={$smarty.const.ACTION_ACTIVATE}&submnu_id={$tbl_sub_menuitem.submnu_id}" class="activeIcon" title="{$_lang.tbl_sub_menu.ACTIVATE.BTN_LBL}"></a>{/if}</td>		</tr>	{/foreach}		<tfoot>			<tr>				<td colspan="7">					# {$result_found}&nbsp;&nbsp;&nbsp;{if $pagination neq ""}{$pagination}{/if}					<select onchange="changePage('{$navigationURL}',this.value,{$smarty.request.limit});">					{if $allPageCount gt 1}						{for $foo=1 to $allPageCount}							<option value="{$foo}" {if $foo eq $currentPage}selected="selected"{/if}>{$foo}</option>						{/for}					{else}						<option value="1" disabled="disabled">1</option>					{/if}					</select>				</td>			</tr>		</tfoot>	</table>{else}	<div class="error">{$_lang.tbl_sub_menu.no_record_found}</div>{/if}<input onclick="window.location.href='{$page_url}?mode={$smarty.const.MODE_CREATE}'" type="button" value="{$_lang.tbl_sub_menu.CREATE.BTN_LBL}"/></div>{include file="tbl_sub_menu/js.tpl"}{include file="footer.tpl"}