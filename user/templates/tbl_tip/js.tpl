{literal}<script type="text/javascript">$(function(){ 		$("#from_date, #to_date").scroller({ display:'bubble', preset: 'date', dateFormat: 'mm/dd/yyyy', timeWheels: 'yyyymmdd', animate: 'slidevertical'});	});function change_field(type){	$('#table_holder, #employee_holder, #distribution_btn').hide();	$('#table, #employee').val('').selectmenu('refresh');	if(type == 'table'){		$('#table_holder').show();	}else{		$('#employee_holder').show();		$('#distribution_btn').show();	} }function search_submit(is_distribution){ if(is_distribution){ 		$('#is_distribution').val(1); 		$('#search_tip_list').submit(); }else{ 		$('#is_distribution').val(0); 		$('#search_tip_list').submit(); }  }function deletetbl_tip(varId){	if(varId > 0){		if(confirm("{/literal}{$_lang.tbl_tip.DELETE.CONFIRM_MSG}{literal}")==true){			window.location.href="{/literal}{$page_url}{literal}?action=delete&tip_id="+varId;		}	}}function actiontbl_tip(action){  	var varId = $("input:checked").length;	var isValid = 0;	if(varId > 0){	if(action != ""){		switch (action) {			case '{/literal}{$smarty.const.ACTION_DELETE}{literal}':						if(confirm("{/literal}{$_lang.tbl_tip.DELETE.CONFIRM_MSG}{literal}")==true){								isValid = 1;						}  			break;						case '{/literal}{$smarty.const.ACTION_DEACTIVATE}{literal}':						isValid = 1;			break;						case '{/literal}{$smarty.const.ACTION_ACTIVATE}{literal}':					isValid = 1; 			break; 		}		if(isValid){		 	$('#action').val(action);		  $('#frm_tbl_tip').submit();		}				} }else{			alert("{/literal}{$_lang.main.select_ids.empty}{literal}"); }	}function validatetbl_tip(){	$("#tip_id_err").html("");	$("#tip_percent_err").html("");	$("#tip_start_date_err").html("");	$("#tip_end_date_err").html("");	var isErr = true;	if(elemById("action").value=="update"){		if(IsNonEmpty(elemById("tip_id").value)==false){			$("#tip_id_err").html("{/literal}{$_lang.tbl_tip.not_empty_msg.tip_id}{literal}");			isErr = false;		}	}	if(IsNonEmpty(elemById("tip_percent").value)==false){		$("#tip_percent_err").html("{/literal}{$_lang.tbl_tip.not_empty_msg.tip_percent}{literal}");		isErr = false;	}else{		if(IsNumeric(elemById("tip_percent").value)==false){  			$("#tip_percent_err").html("{/literal}Invalid Tip{literal}");			isErr = false;		}	}/*	if(IsNonEmpty(elemById("tip_start_date").value)==false){		$("#tip_start_date_err").html("{/literal}{$_lang.tbl_tip.not_empty_msg.tip_start_date}{literal}");		isErr = false;	}*//*	if(IsNonEmpty(elemById("tip_end_date").value)==false){		$("#tip_end_date_err").html("{/literal}{$_lang.tbl_tip.not_empty_msg.tip_end_date}{literal}");		isErr = false;	}*/	if(isErr == false){		alert("{/literal}{$_lang.messages.revise_form}{literal}");	}	return isErr;}//..function</script>{/literal}