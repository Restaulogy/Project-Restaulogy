{include file='header.tpl'}<div class="wrapper"><h1>{$_lang.tbl_tip.listing_title}</h1>{if $error_msg}	<center>{$error_msg}</center>{/if}{if $result_found gt 0 && $tbl_tiplist}	<table class="biz_data_grid">		<tr>			<th class="{if $smarty.get.sort_on eq 'tip_percent'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=tip_percent&sort_by={$new_sort}">{$_lang.tbl_tip.label.tip_percent}</a></th>			<th class="action_header">Action</th>		</tr>		{foreach from=$tbl_tiplist item=tbl_tipitem}		<tr class="{cycle values="odd,even"}">			<td><a href="{$page_url}?mode={$smarty.const.MODE_VIEW}&tip_id={$tbl_tipitem.tip_id}">{$tbl_tipitem.tip_percent}</a></td>			<td><a href="{$page_url}?mode={$smarty.const.MODE_UPDATE}&tip_id={$tbl_tipitem.tip_id}" class="editIcon"></a><a class="deleteIcon" href="#" onclick="deletetbl_tip({$tbl_tipitem.tip_id});"></a>{if $tbl_tipitem.isActive eq 1}<a href="{$page_url}?action={$smarty.const.ACTION_DEACTIVATE}&tip_id={$tbl_tipitem.tip_id}" class="deactiveIcon" title="{$_lang.tbl_tip.DEACTIVATE.BTN_LBL}"></a>{else}<a href="{$page_url}?action={$smarty.const.ACTION_ACTIVATE}&tip_id={$tbl_tipitem.tip_id}" class="activeIcon" title="{$_lang.tbl_tip.ACTIVATE.BTN_LBL}"></a>{/if}</td>		</tr>	{/foreach}		<tfoot>			<tr>				<td colspan="4">					# {$result_found}&nbsp;&nbsp;&nbsp;{if $pagination neq ""}{$pagination}{/if}					<select onchange="changePage('{$navigationURL}',this.value,{$smarty.request.limit});">					{if $allPageCount gt 1}						{for $foo=1 to $allPageCount}							<option value="{$foo}" {if $foo eq $currentPage}selected="selected"{/if}>{$foo}</option>						{/for}					{else}						<option value="1" disabled="disabled">1</option>					{/if}					</select>				</td>			</tr>		</tfoot>	</table>{else}	<div class="error">{$_lang.tbl_tip.no_record_found}</div>{/if}<center><input data-icon="add-item" data-inline="true" onclick="window.location.href='{$page_url}?mode={$smarty.const.MODE_CREATE}'" type="button" value="{$_lang.tbl_tip.CREATE.BTN_LBL}"/></center></div>{include file="tbl_tip/js.tpl"}{include file="footer.tpl"}