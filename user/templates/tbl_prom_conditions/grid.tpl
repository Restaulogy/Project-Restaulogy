{include file='header.tpl'}<div class="wrapper"><h1>{$_lang.tbl_prom_conditions.listing_title}</h1>{if $error_msg}	<div class="biz_center">{$error_msg}</div><!--/center-->{/if}{if $result_found gt 0 && $tbl_prom_conditionslist}	<table class="biz_data_grid">		<tr>			<th class="{if $smarty.get.sort_on eq 'prmcon_promotion'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=prmcon_promotion&sort_by={$new_sort}">{$_lang.tbl_prom_conditions.label.prmcon_promotion}</a></th>			<th class="{if $smarty.get.sort_on eq 'prmcon_title'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=prmcon_title&sort_by={$new_sort}">{$_lang.tbl_prom_conditions.label.prmcon_title}</a></th>			<th class="action_header">Action</th>		</tr>		{foreach from=$tbl_prom_conditionslist item=tbl_prom_conditionsitem}		<tr class="{cycle values="odd,even"}">			<td><a href="{$page_url}?mode={$smarty.const.MODE_VIEW}&prmcon_id={$tbl_prom_conditionsitem.prmcon_id}">{$tbl_prom_conditionsitem.prmcon_promotion}</a></td>			<td>{$tbl_prom_conditionsitem.prmcon_title}</td>			<td><a href="{$page_url}?mode={$smarty.const.MODE_UPDATE}&prmcon_id={$tbl_prom_conditionsitem.prmcon_id}" class="editIcon"></a><a class="deleteIcon" href="#" onclick="deletetbl_prom_conditions({$tbl_prom_conditionsitem.prmcon_id});"></a>{if $tbl_prom_conditionsitem.isActive eq 1}<a href="{$page_url}?action={$smarty.const.ACTION_DEACTIVATE}&prmcon_id={$tbl_prom_conditionsitem.prmcon_id}" class="deactiveIcon" title="{$_lang.tbl_prom_conditions.DEACTIVATE.BTN_LBL}"></a>{else}<a href="{$page_url}?action={$smarty.const.ACTION_ACTIVATE}&prmcon_id={$tbl_prom_conditionsitem.prmcon_id}" class="activeIcon" title="{$_lang.tbl_prom_conditions.ACTIVATE.BTN_LBL}"></a>{/if}</td>		</tr>	{/foreach}		<tfoot>			<tr>				<td colspan="5">					# {$result_found}&nbsp;&nbsp;&nbsp;{if $pagination neq ""}{$pagination}{/if}					<select onchange="changePage('{$navigationURL}',this.value,{$smarty.request.limit});">					{if $allPageCount gt 1}						{for $foo=1 to $allPageCount}							<option value="{$foo}" {if $foo eq $currentPage}selected="selected"{/if}>{$foo}</option>						{/for}					{else}						<option value="1" disabled="disabled">1</option>					{/if}					</select>				</td>			</tr>		</tfoot>	</table>{else}	<div class="error">{$_lang.tbl_prom_conditions.no_record_found}</div>{/if}<div class="biz_center"><input data-icon="add-item" data-inline="true" onclick="window.location.href='{$page_url}?mode={$smarty.const.MODE_CREATE}'" type="button" value="{$_lang.tbl_prom_conditions.CREATE.BTN_LBL}"/></div><!--/center--></div>{include file="tbl_prom_conditions/js.tpl"}{include file="footer.tpl"}