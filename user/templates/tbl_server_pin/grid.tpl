{include file='header.tpl'}<div class="wrapper"><h1>{$_lang.tbl_server_pin.listing_title}</h1>{if $error_msg}	<center>{$error_msg}</center>{/if}{if $result_found gt 0 && $tbl_server_pinlist}	<table class="biz_data_grid">		<tr>			<th class="{if $smarty.get.sort_on eq 'srv_pin_restaurant'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=srv_pin_restaurant&sort_by={$new_sort}">{$_lang.tbl_server_pin.label.srv_pin_restaurant}</a></th>			<th class="{if $smarty.get.sort_on eq 'srv_pin_password'}active_{if $smarty.get.sort_by eq 'DESC'}desc{else}asc{/if}{/if}"><a href="{$page_url}?sort_on=srv_pin_password&sort_by={$new_sort}">{$_lang.tbl_server_pin.label.srv_pin_password}</a></th>			<th class="action_header">Action</th>		</tr>		{foreach from=$tbl_server_pinlist item=tbl_server_pinitem}		<tr class="{cycle values="odd,even"}">			<td><a href="{$page_url}?mode={$smarty.const.MODE_VIEW}&srv_pin_id={$tbl_server_pinitem.srv_pin_id}">{$tbl_server_pinitem.srv_pin_restaurant}</a></td>			<td>{$tbl_server_pinitem.srv_pin_password}</td>			<td><a href="{$page_url}?mode={$smarty.const.MODE_UPDATE}&srv_pin_id={$tbl_server_pinitem.srv_pin_id}" class="editIcon"></a><a class="deleteIcon" href="#" onclick="deletetbl_server_pin({$tbl_server_pinitem.srv_pin_id});"></a>{if $tbl_server_pinitem.isActive eq 1}<a href="{$page_url}?action={$smarty.const.ACTION_DEACTIVATE}&srv_pin_id={$tbl_server_pinitem.srv_pin_id}" class="deactiveIcon" title="{$_lang.tbl_server_pin.DEACTIVATE.BTN_LBL}"></a>{else}<a href="{$page_url}?action={$smarty.const.ACTION_ACTIVATE}&srv_pin_id={$tbl_server_pinitem.srv_pin_id}" class="activeIcon" title="{$_lang.tbl_server_pin.ACTIVATE.BTN_LBL}"></a>{/if}</td>		</tr>	{/foreach}		<tfoot>			<tr>				<td colspan="5">					# {$result_found}&nbsp;&nbsp;&nbsp;{if $pagination neq ""}{$pagination}{/if}					<select onchange="changePage('{$navigationURL}',this.value,{$smarty.request.limit});">					{if $allPageCount gt 1}						{for $foo=1 to $allPageCount}							<option value="{$foo}" {if $foo eq $currentPage}selected="selected"{/if}>{$foo}</option>						{/for}					{else}						<option value="1" disabled="disabled">1</option>					{/if}					</select>				</td>			</tr>		</tfoot>	</table>{else}	<div class="error">{$_lang.tbl_server_pin.no_record_found}</div>{/if}<center><input data-icon="add-item" data-inline="true" onclick="window.location.href='{$page_url}?mode={$smarty.const.MODE_CREATE}'" type="button" value="{$_lang.tbl_server_pin.CREATE.BTN_LBL}"/></center></div>{include file="tbl_server_pin/js.tpl"}{include file="footer.tpl"}