{include file="header.tpl"}<div class="wrapper"><h1>{$_lang.tbl_feedback.create_title}</h1>{if $error_msg}	<center>{$error_msg}</center>{/if}{include file='tbl_feedback/navbar.tpl'}<form name="frmcreatetbl_feedback" id="frmcreatetbl_feedback" onsubmit="return validatetbl_feedback();" method="POST" action="{$page_url}">	<input type="hidden" name="id" id="id" value="0"/>	<div style="display:none;" class="error" id="id_err"></div>	<div style="display:none;">	<label for="post_id">{$_lang.tbl_feedback.label.post_id}</label>	<input type="text" name="post_id" id="post_id" value="{$restaurentinfo.id}"/>	<div class="error" id="post_id_err"></div>	<label for="post_title">{$_lang.tbl_feedback.label.post_title}</label>	<input type="text" name="post_title" id="post_title" value="{$restaurentinfo.name}"/>	<div class="error" id="post_title_err"></div>	<label for="post_type">{$_lang.tbl_feedback.label.post_type}</label>	<input type="text" name="post_type" id="post_type" value="{$smarty.const.DFLT_FEEDBACK_TYPE}"/>	<div class="error" id="post_type_err"></div>	<label for="user_id">{$_lang.tbl_feedback.label.user_id}</label>	<input type="text" name="user_id" id="user_id" value="{$smarty.session.guid}"/>	<div class="error" id="user_id_err"></div>	</div>	<label for="recomm_title">{$_lang.tbl_feedback.label.recomm_title}</label>	<input type="text" name="recomm_title" id="recomm_title" value="{$smarty.post.recomm_title}"/>	<div class="error" id="recomm_title_err"></div>	<label for="recomm_desc">{$_lang.tbl_feedback.label.recomm_desc}</label>	<textarea name="recomm_desc" id="recomm_desc">{$smarty.post.recomm_desc}</textarea>	<div class="error" id="recomm_desc_err"></div>	<label for="recomm_rating">{$_lang.tbl_feedback.label.recomm_rating}</label>  	<select name="recomm_rating" id="recomm_rating"> 		{foreach $Enum_Overall_Rating as $val}			<option value="{$val@key}" {if $smarty.post.recomm_rating eq $val@key}selected="selected"{/if}>{$val}</option>		{/foreach}	</select>	<div class="error" id="recomm_rating_err"></div>	<label for="recomm_QOS_rating">{$_lang.tbl_feedback.label.recomm_QOS_rating}</label>	 	<select name="recomm_QOS_rating" id="recomm_QOS_rating"> 		{foreach $Enum_QOS_Rating as $val}			<option value="{$val@key}" {if $smarty.post.recomm_QOS_rating eq $val@key}selected="selected"{/if}>{$val}</option>		{/foreach}	</select>	<div class="error" id="recomm_QOS_rating_err"></div>	<label for="recomm_QOF_rating">{$_lang.tbl_feedback.label.recomm_QOF_rating}</label>	<select name="recomm_QOF_rating" id="recomm_QOF_rating"> 		{foreach $Enum_QOF_Rating as $val}			<option value="{$val@key}" {if $smarty.post.recomm_QOF_rating eq $val@key}selected="selected"{/if}>{$val}</option>		{/foreach}	</select>	<div class="error" id="recomm_QOF_rating_err"></div>	<label for="recomm_ambience_rating">{$_lang.tbl_feedback.label.recomm_ambience_rating}</label> 	<select name="recomm_ambience_rating" id="recomm_ambience_rating"> 		{foreach $Enum_Ambience_Rating as $val}			<option value="{$val@key}" {if $smarty.post.recomm_ambience_rating eq $val@key}selected="selected"{/if}>{$val}</option>		{/foreach}	</select>	<div class="error" id="recomm_ambience_rating_err"></div>		<div class="field-row">		<label for="recomm_email">{$_lang.tbl_feedback.label.recomm_email}</label>		<input maxlength="255" id="recomm_email" type="text" value="{if $Global_member.email}{$Global_member.email}{else}{$smarty.post.recomm_email}{/if}" name="recomm_email"/>		<div class="error" id="recomm_email_err"></div>	</div>	<div class="field-row">		<label for="recomm_phone">{$_lang.tbl_feedback.label.recomm_phone}</label>		<input maxlength="15" id="recomm_phone" type="text" value="{if $Global_member.staff_phone}{$Global_member.staff_phone}{else}{$smarty.post.recomm_phone}{/if}" name="recomm_phone"/>		<div class="error" id="recomm_phone_err"></div>	</div>    <div class="info">{$_lang.tbl_complaints.info_msg.complnt_phone_email}</div>    <br>			<!--		<label for="start_date">{$_lang.tbl_feedback.label.start_date}</label>	<input type="text" name="start_date" id="start_date" value="{$smarty.post.start_date}"/>	<div class="error" id="start_date_err"></div>	<label for="end_date">{$_lang.tbl_feedback.label.end_date}</label>	<input type="text" name="end_date" id="end_date" value="{$smarty.post.end_date}"/>	<div class="error" id="end_date_err"></div>	-->	<div class='biz_center'>    	<input type="hidden" id="action" name="action" value="{$smarty.const.ACTION_CREATE}"/>        <input data-icon="save" data-inline="true" type="submit"  value="{$_lang.tbl_feedback.new_btn_lbl}"/>        {if $restaurentinfo.rest_review_systems}		  <a href="#" onclick="$('#popupAddSiteReview').show();" data-inline="true" data-role="button" data-icon="gear" >Add Site Review</a> 	    {/if}        <input  class="fright" type="reset" value="{$_lang.cancel_lbl}" data-icon="delete" data-inline="true" onclick="window.location.href='{$page_url}'"/>    </div></form>{include file="tbl_feedback/js.tpl"}</div>{if $restaurentinfo.rest_review_systems}  {include file="tbl_feedback/add_site_review.tpl"}{/if}{include file="ask_cust_nm.tpl"}{include file="footercontent.tpl"}{literal}<script type="text/javascript">{/literal}{if $ask_cust_name eq 1}	 {literal}        $(function(){ askCustName(); });	 {/literal}{/if}{literal}</script>{/literal}</body></html>